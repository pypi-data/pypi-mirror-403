sing_box_server_hysteria2_obfs_password: "{{ sing_box_server_hysteria2_obfs_password }}"
{% endif %}
sing_box_server_hysteria2_users:
{% for user in sing_box_server_hysteria2_users %}
  - name: {{ user.name }}
    password: "{{ user.password }}"
{% endfor %}
{% endif %}

{% if sing_box_server_enable_vless and sing_box_server_vless_users | length > 0 %}
# VLESS
