---
# Auto-generated host variables for {{ inventory_hostname }}
# Generated on: {{ ansible_date_time.iso8601 }}

{% if sing_box_server_enable_shadowsocks and sing_box_server_shadowsocks_password %}
# Shadowsocks
sing_box_server_shadowsocks_password: "{{ sing_box_server_shadowsocks_password }}"
{% if sing_box_server_shadowsocks_users | length > 0 %}
sing_box_server_shadowsocks_users:
{% for user in sing_box_server_shadowsocks_users %}
  - name: {{ user.name }}
    password: "{{ user.password }}"
{% endfor %}
{% endif %}
{% endif %}

{% if sing_box_server_enable_trojan and sing_box_server_trojan_users | length > 0 %}
# Trojan
sing_box_server_trojan_users:
{% for user in sing_box_server_trojan_users %}
  - name: {{ user.name }}
    password: "{{ user.password }}"
{% endfor %}
{% endif %}

{% if sing_box_server_enable_hysteria2 and sing_box_server_hysteria2_users | length > 0 %}
# Hysteria2
{% if sing_box_server_hysteria2_obfs_enabled and sing_box_server_hysteria2_obfs_password %}
