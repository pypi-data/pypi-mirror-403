{% for user in sing_box_server_vless_users %}
  - name: {{ user.name }}
    uuid: "{{ user.uuid }}"
{% endfor %}
{% endif %}

{% if sing_box_server_enable_tuic and sing_box_server_tuic_users | length > 0 %}
# Tuic
sing_box_server_tuic_users:
{% for user in sing_box_server_tuic_users %}
  - name: {{ user.name }}
    uuid: "{{ user.uuid }}"
    password: "{{ user.password }}"
{% endfor %}
{% endif %}
