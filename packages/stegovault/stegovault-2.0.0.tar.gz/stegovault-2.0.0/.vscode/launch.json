{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/stegovault/cli_main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--help"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
