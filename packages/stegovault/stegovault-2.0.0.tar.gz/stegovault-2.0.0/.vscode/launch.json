      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Example 3",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/example3_detection_analysis.py",
      "console": "integratedTerminal",
      "justMyCode": true,
