# Include README and other metadata files
include README.md
include LICENSE
include CONTRIBUTING.md
include requirements.txt

# Include documentation
recursive-include docs *.md

# Include examples
recursive-include examples *.py

# Include test files
recursive-include tests *.sh
recursive-include tests *.py

# Include configuration files
include setup.py
include pyproject.toml
include pyrightconfig.json
include .gitignore

# Include Netlify configuration
include netlify.toml
recursive-include functions *.py

# Include VS Code configuration
recursive-include .vscode *.json *.md

# Exclude unnecessary files
exclude .DS_Store
exclude *.pyc
exclude *.pyo
exclude __pycache__
exclude .pytest_cache
exclude .mypy_cache
exclude *.egg-info
exclude .git
exclude .github
exclude Dockerfile
exclude docker-compose.yml
