# PDF2TeX Environment Configuration
# Copy this file to .env and configure for your environment

# Debug mode
PDF2TEX_DEBUG=false

# HuggingFace API key (required for LLM generation)
HUGGINGFACE_API_KEY=your_api_key_here

# Device configuration
PDF2TEX_EXTRACTION__DEVICE=cuda
PDF2TEX_RAG__DEVICE=cuda

# Qdrant configuration
PDF2TEX_RAG__QDRANT_HOST=localhost
PDF2TEX_RAG__QDRANT_PORT=6333

# Model configuration
PDF2TEX_EXTRACTION__NOUGAT_MODEL=facebook/nougat-base
PDF2TEX_RAG__EMBEDDING_MODEL=BAAI/bge-m3
PDF2TEX_GENERATION__MODEL_NAME=meta-llama/Meta-Llama-3.1-70B-Instruct

# Processing configuration
PDF2TEX_EXTRACTION__DPI=150
PDF2TEX_CHUNKING__CHUNK_SIZE=1500
PDF2TEX_CHUNKING__CHUNK_OVERLAP=150

# Pipeline configuration
PDF2TEX_PIPELINE__NUM_WORKERS=4
PDF2TEX_PIPELINE__USE_RAY=true

# MinIO configuration (optional)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# PostgreSQL configuration (optional)
POSTGRES_USER=pdf2tex
POSTGRES_PASSWORD=pdf2tex
POSTGRES_DB=pdf2tex
