{
  "commit-search-depth": 150,
  "release-search-depth": 10,
  "sequential-calls": true,
  "packages": {
    ".": {
      "release-type": "python",
      "path": ".",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "json",
          "path": "server.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "server.json",
          "jsonpath": "$.packages[0].version"
        },
        {
          "type": "json",
          "path": "server.json",
          "jsonpath": "$.packages[1].identifier"
        },
        {
          "type": "generic",
          "path": "deploy/helm/mcp-context-server/Chart.yaml"
        }
      ],
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "draft": false,
      "prerelease": false,
      "pull-request-header": "\uD83D\uDE80 New Release",
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "chore",
          "section": "Chores",
          "hidden": true
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "Continuous Integration",
          "hidden": true
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        }
      ]
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
