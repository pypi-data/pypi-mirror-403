    color: $border-highlight;
}

StatusIndicator.loading {
    color: $accent-primary;
}

StatusIndicator.success {
    color: $accent-success;
}

StatusIndicator.error {
    color: $accent-error;
}

StatusIndicator.warning {
    color: $accent-warning;
}

/* --- Status Row --- */
StatusRow {
    width: 100%;
    height: auto;
    padding: 0 1;
}

StatusRow .status-label {
    width: 1fr;
}

StatusRow .status-detail {
    width: auto;
    color: $fg-muted;
}

/* (Wizard modal styles consolidated in primary block above) */

/* --- Section Titles (used in step components) --- */
.section-title {
    color: $accent-primary;
    text-style: bold;
    width: 100%;
    margin-top: 1;
    margin-bottom: 1;
}

/* --- Success/Error Messages --- */
.success-message {
    color: $accent-success;
    text-align: center;
    padding: 1;
}

.error-message {
    color: $accent-error;
    padding: 1;
}

/* =============================================================================
 * Phase 7: Utility CSS Classes
 * =============================================================================
 * Reusable utility classes for future UI enhancements
 */

/* Rounded card container */
.rounded-card {
    border: round $border-default;
    padding: 1 2;
    margin: 1 0;
    background: $bg-surface;
}

/* Hero input styling */
.input-hero {
    border: round $border-default;
    background: $bg-surface;
    padding: 1 2;
    margin: 1 2;
}

/* Mode pill (status badges) */
.mode-pill {
    border: round $border-soft;
    padding: 0 1;
    margin: 0 1;
    min-width: 8;
    background: $bg-surface-2;
}

/* Progress bar styling */
.progress-bar {
    height: 1;
    width: 100%;
    background: $border-muted;
}

.progress-bar-fill {
    height: 1;
    background: $accent-primary;
}

/* Diff highlighting for code changes */
.diff-add {
    color: $accent-success;
    background: #0d2818;
}

.diff-remove {
    color: $accent-error;
    background: #2d1010;
}

/* Tree node styling */
.tree-node {
    padding-left: 2;
}

.tree-node-expanded {
    color: $fg-primary;
}

.tree-node-collapsed {
    color: $fg-muted;
}

/* =============================================================================
 * Phase 12: View Dropdown & Final Answer View
 * =============================================================================
 */

/* View Dropdown - Overlay for round/final answer selection */
ViewDropdown {
    layer: overlay;
    width: auto;
    min-width: 28;
    height: auto;
    max-height: 15;
    background: $bg-surface;
    border: solid $border-highlight;
    padding: 0;
    margin: 0;
    offset: 0 1;
}

ViewDropdown .dropdown-item {
    width: 100%;
    height: auto;
    padding: 0 1;
    background: transparent;
}

ViewDropdown .dropdown-item:hover {
    background: $bg-elevated;
}

ViewDropdown .dropdown-item.current {
    color: $accent-primary;
}

ViewDropdown .dropdown-item.final-answer {
    color: $accent-success;
    text-style: bold;
}

ViewDropdown .dropdown-item.final-answer.current {
    color: #56d364;
}

ViewDropdown .dropdown-separator {
    width: 100%;
    height: 1;
    color: $fg-subtle;
    padding: 0 1;
}

ViewDropdown .context-reset {
    color: $accent-warning;
}

/* Final Answer View - Full-panel display of winning answer */
FinalAnswerView {
    width: 100%;
    height: 1fr;
    padding: 0;
    margin: 0;
    background: $bg-base;
}

FinalAnswerView.hidden {
    display: none;
}

FinalAnswerView #final_header {
    width: 100%;
    height: auto;
    padding: 0 1;
    background: $bg-surface-2;
    border-bottom: solid $accent-success;
}

FinalAnswerView #final_header_title {
    width: 100%;
    text-align: center;
    color: $accent-success;
    text-style: bold;
}

FinalAnswerView #final_content_container {
    width: 100%;
    height: 1fr;
    padding: 1 2;
    background: $bg-base;
    overflow-y: auto;
}

FinalAnswerView #final_content {
    width: 100%;
    height: auto;
    color: $fg-primary;
}

FinalAnswerView #final_footer {
    width: 100%;
    height: auto;
    padding: 0 1;
    background: $bg-surface;
    border-top: solid $border-default;
}

FinalAnswerView #final_metadata {
    width: 100%;
    height: 1;
    color: $fg-muted;
    text-align: center;
    padding: 0 1;
}

FinalAnswerView #final_buttons {
    width: 100%;
    height: 3;
    align: center middle;
}

FinalAnswerView #final_buttons Button {
    margin: 0 1;
    min-width: 14;
}

FinalAnswerView #copy_btn {
    background: $accent-success;
    color: white;
}

FinalAnswerView #copy_btn:hover {
    background: #2ea043;
}

FinalAnswerView #workspace_btn {
    background: $bg-surface-2;
    color: $fg-primary;
}

FinalAnswerView #workspace_btn:hover {
    background: $bg-elevated;
}

FinalAnswerView #voting_btn {
    background: $bg-surface-2;
    color: $fg-primary;
}

FinalAnswerView #voting_btn:hover {
    background: $bg-elevated;
}

FinalAnswerView #continue_hint {
    width: 100%;
    height: 1;
    color: $accent-primary;
    text-align: center;
    text-style: italic;
    padding: 0 1;
}

FinalAnswerView .separator {
    width: 100%;
    height: 1;
    color: $border-default;
}

/* Round selector in AgentStatusRibbon - Final answer state */
AgentStatusRibbon #round_selector.final-answer-view {
    color: $accent-success;
    text-style: bold;
}

AgentStatusRibbon #round_selector.final-answer-view:hover {
    color: #56d364;
}

/* === Plan Options Popover === */
/* Dropdown overlay for plan mode configuration */
PlanOptionsPopover {
    layer: overlay;
    dock: bottom;
    width: auto;
    min-width: 35;
    max-width: 50;
    height: auto;
    max-height: 25;
    background: $bg-surface;
    border: solid $accent-primary;
    padding: 1;
    margin-bottom: 3;
    margin-left: 1;
    display: none;
}

PlanOptionsPopover.visible {
    display: block;
}

PlanOptionsPopover #popover_title {
    text-style: bold;
    color: $fg-primary;
    margin-bottom: 1;
}

PlanOptionsPopover #popover_content {
    width: 100%;
    height: auto;
}

PlanOptionsPopover .section-label {
    color: $fg-muted;
    margin-top: 1;
    margin-bottom: 0;
    height: 1;
}

PlanOptionsPopover Select {
    width: 100%;
    margin-bottom: 1;
}

PlanOptionsPopover #close_btn {
    margin-top: 1;
    width: 100%;
    background: $bg-surface-2;
}

PlanOptionsPopover #close_btn:hover {
    background: $bg-elevated;
}

/* Plan settings button in mode bar - matches ModeToggle style */
#plan_settings_btn {
    width: auto;
    height: 2;
    min-width: 3;
    background: transparent;
    color: $fg-muted;
    border: none;
    border-bottom: tall $border-default;
    padding: 0 1;
    margin-left: 1;
}

#plan_settings_btn:hover {
    background: transparent;
    color: $accent-primary;
    border-bottom: tall $accent-primary;
}

#plan_settings_btn.hidden {
    display: none;
}

/* Plan status label in mode bar */
#plan_status {
    color: $fg-muted;
    text-style: italic;
    padding: 0 1;
}

#plan_status.hidden {
    display: none;
}

/* === Toast Notifications === */
ToastRack {
    margin-bottom: 8;  /* Push up above tab bar and input */
}

Toast.-information {
    border-left: thick $accent-info;
}

Toast.-warning {
    border-left: thick $accent-warning;
}

Toast.-error {
    border-left: thick $accent-error;
}

Toast.-success {
    border-left: thick $accent-success;
}


/* ============================================
   Enhanced Focus Styles for Wizards
   ============================================ */

/* Strong focus ring for all interactive elements */
WizardModal Input:focus,
WizardModal Select:focus,
WizardModal TextArea:focus,
WizardModal OptionList:focus,
WizardModal Checkbox:focus {
    border: solid $accent-primary;
}

/* OptionList specific focus and selection */
WizardModal OptionList:focus > .option-list--option-highlighted {
    background: #1a3a5c;
    border-left: thick $accent-primary;
    color: #ffffff;
    text-style: bold;
}

WizardModal OptionList > .option-list--option-highlighted {
    background: #1a3a5c;
    border-left: thick $accent-primary;
    color: #ffffff;
    text-style: bold;
}

/* Hover state for OptionList items */
WizardModal OptionList > .option-list--option:hover {
    background: $bg-surface-3;
    border-left: thick $border-highlight;
}

/* Selected item in OptionList */
WizardModal .step-option-list {
    border: solid $border-default;
    background: $bg-surface;
    padding: 0;
}

/* Checkbox focus and states */
WizardModal Checkbox {
    background: transparent;
    border: none;
    border-left: thick transparent;
    height: auto;
    padding: 0 1;
    margin: 0;
}

WizardModal Checkbox:focus {
    background: transparent;
    border: none;
    border-left: thick #00CED1;
    color: #e6edf3;
    text-style: none;
}

WizardModal Checkbox > .toggle--label {
    text-style: none;
}

WizardModal Checkbox:focus > .toggle--label {
    text-style: none;
    color: #e6edf3;
}

WizardModal Checkbox:hover {
    background: #21262d;
    border: none;
    border-left: thick #484f58;
}

WizardModal .multi-select-checkbox,
WizardModal .provider-checkbox {
    margin: 0;
    padding: 0 1;
}

/* Checkbox list container */
WizardModal .checkbox-list,
WizardModal .provider-checkbox-list {
    padding: 0;
    background: transparent;
}

/* Configured provider label */
WizardModal .configured-label {
    color: $accent-success;
    text-style: italic;
    padding: 0 1;
    margin: 0;
}

/* Input and TextArea enhanced focus */
WizardModal Input:focus {
    border: solid $accent-primary;
    background: $bg-surface-2;
}

WizardModal TextArea:focus {
    border: solid $accent-primary;
    background: $bg-surface-2;
}

/* Select widget focus */
WizardModal Select:focus {
    border: solid $accent-primary;
    background: $bg-surface-2;
}

/* (Wizard progress bar styles consolidated in primary block above) */
