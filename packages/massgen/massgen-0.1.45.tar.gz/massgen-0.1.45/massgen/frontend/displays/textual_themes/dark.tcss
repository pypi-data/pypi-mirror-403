    text-style: bold;
}

BreadcrumbStepper .step-label.completed {
    color: $accent-success;
}

BreadcrumbStepper .step-label.pending {
    color: $border-highlight;
}

/* --- Status Indicator --- */
StatusIndicator {
    width: auto;
    height: 1;
}

