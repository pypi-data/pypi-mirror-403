    background: #2d2510;
}

.state-warning-text {
    color: $accent-warning;
}

/* Error states */
.state-error {
    border: solid $accent-error;
    background: #1a0f0f;
}

.state-error-text {
    color: $accent-error;
}

/* Loading states */
.state-loading {
