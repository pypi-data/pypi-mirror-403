{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.michael-denyer/hot-memory-mcp",
  "description": "Two-tier memory: hot cache (0ms) + semantic search. Self-organizing.",
  "repository": {
    "url": "https://github.com/michael-denyer/memory-mcp",
    "source": "github"
  },
  "version": "0.7.0",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "hot-memory-mcp",
      "version": "0.7.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to SQLite database file",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MEMORY_MCP_DB_PATH"
        },
        {
          "description": "Embedding model to use (default: all-MiniLM-L6-v2)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MEMORY_MCP_EMBEDDING_MODEL"
        }
      ]
    }
  ]
}
