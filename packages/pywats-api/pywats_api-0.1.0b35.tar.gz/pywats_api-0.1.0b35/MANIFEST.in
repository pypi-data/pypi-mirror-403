# MANIFEST.in - Controls what goes into source distribution (sdist)

# Include essential files
include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml

# Include all source code
recursive-include src *.py
recursive-include src *.pyi
recursive-include src *.typed

# Include package data
recursive-include src *.json

# Include official user-facing documentation in src
include src/pywats_client/GUI_CONFIGURATION.md
include src/pywats_client/control/HEADLESS_GUIDE.md

# Exclude internal documentation in src
exclude src/pywats_client/GUI_REDESIGN.md
exclude src/pywats/domains/report/report_models/uur/UUR_IMPLEMENTATION_INSTRUCTIONS.md

# Include official domain documentation
include docs/INDEX.md
include docs/README.md
include docs/GETTING_STARTED.md
include docs/PRODUCT.md
include docs/ASSET.md
include docs/PRODUCTION.md
include docs/REPORT.md
include docs/ANALYTICS.md
include docs/SOFTWARE.md
include docs/ROOTCAUSE.md
include docs/PROCESS.md
include docs/SCIM.md

# Include usage guides (detailed module documentation)
recursive-include docs/usage *.md

# Include comprehensive domain examples
include examples/README.md
recursive-include examples *.py
recursive-include examples *.md

# Exclude internal documentation (architecture, design, internal notes)
prune tests
prune api-tests
prune converters
prune scripts
prune .github
prune packages
prune docs/internal
prune docs/archive

# Exclude specific files
exclude .env
exclude .env.*
exclude .env.template
exclude .flake8
exclude pytest.ini
exclude .coverage
exclude pywats.log
exclude *.log

# Exclude any credential/token files (safety net)
global-exclude *token*
global-exclude *secret*
global-exclude *credential*
global-exclude *password*

# Exclude internal root-level documentation
exclude DIALOG_BUGS_FIXED.md
exclude DOCUMENTATION_REVIEW.md
exclude PACKAGE_DOCUMENTATION.md
exclude ENVIRONMENT_SETUP_GUIDE.md
exclude PYPI_INSTALLATION.md
exclude QUICK_REFERENCE.md
exclude RELEASE.md
exclude RELEASE_CHECKLIST.md

# Exclude all markdown files in root except README and CHANGELOG
# Working notes and internal documentation
exclude ARCHITECTURE_*.md
exclude CLIENT_*.md
exclude CLOUD_*.md
exclude CONVERTER_*.md
exclude CRITICAL_*.md
exclude ENVIRONMENT_*.md
exclude INTERNAL_*.md
exclude LOGGING_*.md
exclude PRODUCTION_*.md
exclude QUICK_REFERENCE.md
exclude RELEASE_*.md
exclude TIMEZONE_*.md

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

# Exclude generated metadata directories (can appear locally after editable installs)
prune src/pywats_api.egg-info
global-exclude *.egg-info
