// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "hypertor",
	"image": "mcr.microsoft.com/devcontainers/rust:1-bookworm",

	// Features to add to the dev container
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12",
			"installTools": false
		},
		"ghcr.io/guiyomh/features/just:0": {},
		"ghcr.io/devcontainers/features/ruby:1": {
			"version": "3.2"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [9050, 4000],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && export PATH=\"$HOME/.local/bin:$PATH\" && rustup component add rustfmt clippy && uv tool install maturin && gem install github-pages",

	// Build Python bindings on container start
	"postStartCommand": "export PATH=\"$HOME/.local/bin:$PATH\" && cd /workspaces/hypertor && uv venv && . .venv/bin/activate && uv pip install maturin && maturin develop 2>/dev/null || true",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"vadimcn.vscode-lldb",
				"serayuzgur.crates",
				"editorconfig.editorconfig",
				"ms-python.python",
				"tamasfe.even-better-toml"
			]
		}
	}
}
