{
    "name": "markdown",
    "description": "Recipe for markdown documents in English",
    "schema": "Markdown",
    "language": "en",
    "metadata": {
        "version": "0.1.0",
        "author": "Chonkie Team"
    },
    "recipe": {
        "delimiters": [
          ". ",
          "! ",
          "? ",
          "\n"
        ],
        "include_delim": "prev",
        "recursive_rules": {
          "levels": [
            {
              "delimiters": [
                "######",
                "#####",
                "####",
                "###",
                "##",
                "#"
              ],
              "whitespace": false,
              "include_delim": "next"
            },
            {
              "delimiters": [
                "\n\n",
                "\n\r"
              ],
              "whitespace": false,
              "include_delim": "prev"
            },
            {
              "delimiters": [
                "\n",
                "\r"
              ],
              "whitespace": false,
              "include_delim": "prev"
            },
            {
              "delimiters": [
                ". ",
                "! ",
                "? "
              ],
              "whitespace": false,
              "include_delim": "prev"
            },
            {
              "delimiters": null,
              "whitespace": false,
              "include_delim": "prev"
            }
          ]
        }
      }
}