# Include documentation files
include README.md
include LICENSE
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include ARCHITECTURE.md

# Include OpenAPI specification files
recursive-include src/comp_manager/api/openapi *.yaml *.yml

# Include test fixtures (if needed for package testing)
recursive-include tests/fixtures *.yaml *.yml

# Include version file generated by setuptools_scm
include src/comp_manager/version.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude test and development files from distribution
prune tests
prune .tox
prune .github
prune .claude
prune examples
exclude .gitignore
exclude .gitattributes
exclude tox.ini
exclude .coverage
exclude pytest.ini
exclude CLAUDE.md
