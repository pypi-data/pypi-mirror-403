include build.zig
include build.zig.zon
include jzip.c
include README.md
include LICENSE
include THIRD_PARTY_NOTICES.md

recursive-include src *.zig
recursive-include bindings/python *.py *.pyi py.typed README.md
recursive-include bindings/python/src *.zig
recursive-include bindings/python/tests *.py

# Vendored third-party dependencies
include third_party/zstd/LICENSE
recursive-include third_party/zstd/lib *.c *.h *.S *.mk

# Never ship local build artifacts from the source tree.
exclude bindings/python/jzip/_jzip*.so
exclude bindings/python/jzip/_jzip*.dylib
exclude bindings/python/jzip/_jzip*.pyd
prune bindings/python/*.egg-info
