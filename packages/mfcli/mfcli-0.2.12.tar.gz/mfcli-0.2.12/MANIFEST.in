# MANIFEST.in - Include additional files in PyPI distribution

# Documentation
include README.md
include LICENSE
include INSTALL.md
include MCP_SETUP.md
include CONFIGURATION.md
include BUILD.md

# Installation scripts
include install.ps1
include install.sh

# Configuration files
include mfcli/alembic.ini
recursive-include mfcli *.yaml
recursive-include mfcli *.ini
recursive-include mfcli *.mako
include mfcli/.env.example

# MCP configuration templates
recursive-include mfcli/mcp/configs *.json

# Exclude development and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
exclude .gitignore
exclude .env
exclude pytest.ini
exclude mfcli.spec
prune build
prune dist
prune *.egg-info
prune mfcli/tests
prune app
prune docs
