[
  {
    "type": "PRIDERESTTool",
    "name": "PRIDE_search_proteomics",
    "description": "Search the PRIDE Archive for proteomics experiments and mass spectrometry datasets. Returns project metadata including accession IDs (PXD...), species, tissue types, instruments, publication dates, and file counts. Use this to discover protein expression data, PTM studies, and downloadable raw files for reanalysis. Example queries: 'breast cancer', 'phosphorylation', 'COVID-19 proteome'.",
    "parameter": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search keywords for proteomics experiments. Examples: 'cancer', 'phosphorylation', 'liver proteome', 'COVID-19'. Searches across project titles, descriptions, species, and tissues."
        },
        "page_size": {
          "type": "integer",
          "default": 20,
          "description": "Number of projects to return per page (default: 20, max: 100)"
        }
      },
      "required": [
        "query"
      ]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/pride/ws/archive/v2/projects?query={query}&pageSize={page_size}",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "description": "ToolUniverse wrapper around PRIDE Archive v2 API response.",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "description": "Execution status.",
          "enum": [
            "success",
            "error"
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Request URL used."
        },
        "data": {
          "type": [
            "object",
            "array",
            "null"
          ],
          "description": "PRIDE API response body - can be paginated object with content array or direct array of projects.",
          "additionalProperties": true,
          "properties": {
            "content": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "accession": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "species": {
                    "type": "array"
                  },
                  "tissues": {
                    "type": "array"
                  },
                  "diseases": {
                    "type": "array"
                  },
                  "instruments": {
                    "type": "array"
                  },
                  "submissionDate": {
                    "type": "string"
                  },
                  "publicationDate": {
                    "type": "string"
                  },
                  "numAssays": {
                    "type": "integer"
                  },
                  "numSamples": {
                    "type": "integer"
                  },
                  "numFiles": {
                    "type": "integer"
                  },
                  "fileSize": {
                    "type": "integer"
                  },
                  "labHead": {
                    "type": "object"
                  },
                  "submitters": {
                    "type": "array"
                  },
                  "keywords": {
                    "type": "array"
                  },
                  "projectTags": {
                    "type": "array"
                  }
                }
              }
            },
            "pageInfo": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "page": {
                  "type": "integer"
                },
                "size": {
                  "type": "integer"
                },
                "totalElements": {
                  "type": "integer"
                },
                "totalPages": {
                  "type": "integer"
                }
              }
            }
          }
        },
        "error": {
          "type": [
            "string",
            "null"
          ],
          "description": "Error summary if status=error."
        },
        "status_code": {
          "type": [
            "integer",
            "null"
          ],
          "description": "HTTP status code if available."
        },
        "detail": {
          "type": [
            "string",
            "null"
          ],
          "description": "Additional error detail (truncated)."
        }
      },
      "required": [
        "status"
      ]
    },
    "test_examples": [
      {
        "query": "cancer",
        "page_size": 5
      },
      {
        "query": "COVID-19",
        "page_size": 10
      }
    ]
  },
  {
    "type": "PRIDERESTTool",
