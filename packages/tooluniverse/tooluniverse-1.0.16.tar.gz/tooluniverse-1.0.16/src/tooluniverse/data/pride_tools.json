  {
    "type": "PRIDERESTTool",
    "name": "PRIDE_get_project_files",
    "description": "Get the complete list of data files for a PRIDE Archive project including raw mass spectrometry files, search results, FASTA databases, and supplementary data. Returns file metadata with names, types, sizes, FTP/Aspera download URLs, and checksums. Essential for downloading proteomics datasets for reanalysis or integration. Use accession from PRIDE_search_proteomics.",
    "parameter": {
      "type": "object",
      "properties": {
        "accession": {
          "type": "string",
          "description": "PRIDE project accession identifier (format: PXD######, e.g., 'PXD000001'). Find accessions using PRIDE_search_proteomics."
        }
      },
      "required": [
        "accession"
      ]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/pride/ws/archive/v2/files/byProject?accession={accession}",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "description": "ToolUniverse wrapper around PRIDE files list response. Returns single project files or batch results.",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "success",
            "error"
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        },
        "data": {
          "type": [
            "array",
            "object",
            "null"
          ],
          "description": "List of project files with download URLs.",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "accession": {
                "type": "string"
              },
              "fileName": {
                "type": "string"
              },
              "fileCategory": {
                "type": "string"
              },
              "fileSize": {
                "type": "integer"
              },
              "fileExtension": {
                "type": "string"
              },
              "fileMd5": {
                "type": "string"
              },
              "publicFileLocations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "error": {
