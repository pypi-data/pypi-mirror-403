[
  {
    "type": "ArrayExpressRESTTool",
    "name": "arrayexpress_search_experiments",
    "description": "Search ArrayExpress experiments by keywords, species, or array platform. Note: ArrayExpress has been integrated into BioStudies. Some endpoints may return HTML instead of JSON. Returns experiment metadata including titles, descriptions, and publication information if available.",
    "parameter": {
      "type": "object",
      "properties": {
        "keywords": {
          "type": "string",
          "description": "Search keywords (e.g., disease name, tissue type, experimental condition)"
        },
        "species": {
          "type": "string",
          "description": "Species name (e.g., 'Homo sapiens', 'Mus musculus')"
        },
        "array": {
          "type": "string",
          "description": "Array platform name"
        },
        "limit": {
          "type": "integer",
          "description": "Maximum number of results (default: 10, max: 100)",
          "default": 10,
          "maximum": 100
        },
        "offset": {
          "type": "integer",
          "description": "Offset for pagination (default: 0)",
          "default": 0
        }
      },
      "required": []
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/arrayexpress/json/v3/experiments",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "description": "Search results with experiments"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "keywords": "cancer",
        "limit": 10
      },
      {
        "species": "Homo sapiens",
        "keywords": "brain",
        "limit": 20
      }
    ]
  },
  {
    "type": "ArrayExpressRESTTool",
    "name": "arrayexpress_get_experiment",
    "description": "Get detailed information about a specific ArrayExpress experiment by experiment ID. Note: ArrayExpress has been integrated into BioStudies. Some experiment IDs may not be accessible via this endpoint. Returns complete experiment metadata if available.",
    "parameter": {
      "type": "object",
      "properties": {
        "experiment_id": {
          "type": "string",
          "description": "ArrayExpress experiment ID (e.g., 'E-MTAB-1234')"
        }
      },
      "required": ["experiment_id"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/arrayexpress/json/v3/experiments/{experiment_id}",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "description": "Complete experiment information"
        }
      }
    },
    "test_examples": [
      {
        "experiment_id": "E-MTAB-1234"
      }
    ]
  },
  {
    "type": "ArrayExpressRESTTool",
    "name": "arrayexpress_get_experiment_files",
    "description": "Get list of files associated with an ArrayExpress experiment. Returns file metadata including file names, types, and download links.",
    "parameter": {
      "type": "object",
      "properties": {
        "experiment_id": {
          "type": "string",
          "description": "ArrayExpress experiment ID"
        }
      },
      "required": ["experiment_id"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/arrayexpress/json/v3/experiments/{experiment_id}/files",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "array",
          "description": "List of files"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "experiment_id": "E-MTAB-1234"
      }
    ]
  },
  {
    "type": "ArrayExpressRESTTool",
    "name": "arrayexpress_get_experiment_samples",
    "description": "Get sample information for an ArrayExpress experiment. Returns sample metadata including sample names, characteristics, and factor values.",
    "parameter": {
      "type": "object",
      "properties": {
        "experiment_id": {
          "type": "string",
          "description": "ArrayExpress experiment ID"
        }
      },
      "required": ["experiment_id"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/arrayexpress/json/v3/experiments/{experiment_id}/samples",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "array",
          "description": "List of samples"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "experiment_id": "E-MTAB-1234"
      }
    ]
  }
]
