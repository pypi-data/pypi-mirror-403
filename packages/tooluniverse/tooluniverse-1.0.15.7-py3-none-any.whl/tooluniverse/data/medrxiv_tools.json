[
  {
    "type": "MedRxivTool",
    "name": "MedRxiv_search_preprints",
    "description": "Search medRxiv preprints using the public medRxiv API. Returns preprints with title, authors, year, DOI, and URL.",
    "parameter": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query for medRxiv preprints. Use keywords separated by spaces to refine your search."
        },
        "max_results": {
          "type": "integer",
          "description": "Maximum number of preprints to return. Default is 10, maximum is 200.",
          "default": 10
        }
      },
      "required": [
        "query",
        "max_results"
      ]
    },
    "return_schema": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "year": {
            "type": "integer"
          },
          "doi": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "abstract": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "data_quality": {
            "type": "object",
            "properties": {
              "has_abstract": {
                "type": "boolean"
              },
              "has_authors": {
                "type": "boolean"
              },
              "has_year": {
                "type": "boolean"
              },
              "has_doi": {
                "type": "boolean"
              },
              "has_url": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "test_examples": [
      {
        "query": "covid-19",
        "max_results": 5
      }
    ]
  }
]
