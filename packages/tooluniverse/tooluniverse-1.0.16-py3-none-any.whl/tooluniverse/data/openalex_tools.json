        "mailto": {
          "type": "string",
          "description": "Optional contact email for OpenAlex polite pool."
        }
      },
      "required": ["openalex_id"]
    },
    "fields": {
      "path": "/works/{openalex_id}",
      "path_params": ["openalex_id"]
    },
    "return_schema": {
      "type": "object",
      "description": "Wrapper around OpenAlex /works/{id} response.",
      "additionalProperties": true,
      "properties": {
        "status": {"type": "string", "enum": ["success", "error"]},
        "url": {"type": ["string", "null"]},
        "data": {
          "type": ["object", "null"],
          "additionalProperties": true,
          "properties": {
            "id": {"type": "string"},
            "title": {"type": ["string", "null"]},
            "doi": {"type": ["string", "null"]},
            "publication_year": {"type": ["integer", "null"]}
          }
        },
        "error": {"type": ["string", "null"]},
        "status_code": {"type": ["integer", "null"]},
        "detail": {"type": ["string", "null"]}
      },
      "required": ["status"]
    },
    "test_examples": [
      {"openalex_id": "W2626778328"}
    ]
  },
