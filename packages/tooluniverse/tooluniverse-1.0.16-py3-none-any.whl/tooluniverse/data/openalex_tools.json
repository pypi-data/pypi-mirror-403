[
  {
    "type": "OpenAlexTool",
    "name": "openalex_literature_search",
    "description": "Search for academic literature using OpenAlex API. Retrieves papers with title, abstract, authors, publication year, and organizational affiliations based on search keywords.",
    "parameter": {
      "type": "object",
      "properties": {
        "search_keywords": {
          "type": "string",
          "description": "Keywords to search for in paper titles, abstracts, and content. Use relevant scientific terms or phrases."
        },
        "max_results": {
          "type": "integer",
          "description": "Maximum number of papers to retrieve (default: 10, maximum: 200).",
          "default": 10,
          "minimum": 1,
          "maximum": 200
        },
        "year_from": {
          "type": "integer",
          "description": "Start year for publication date filter (e.g., 2020). Optional parameter to limit search to papers published from this year onwards."
        },
        "year_to": {
          "type": "integer",
          "description": "End year for publication date filter (e.g., 2023). Optional parameter to limit search to papers published up to this year."
        },
        "open_access": {
          "type": "boolean",
          "description": "Filter for open access papers only. Set to true for open access papers, false for non-open access, or omit for all papers."
        }
      },
      "required": [
        "search_keywords"
      ]
    },
    "return_schema": {
      "type": "array",
      "description": "List of academic papers from OpenAlex matching the search query",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the paper"
          },
          "abstract": {
            "type": "string",
            "description": "Abstract of the paper"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of author names"
          },
          "year": {
            "type": [
              "integer",
              "string"
            ],
            "description": "Publication year (integer) or 'Year not available' (string)"
          },
          "organizations": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of organizational affiliations"
          },
          "venue": {
            "type": "string",
            "description": "Journal or venue name"
          },
          "doi": {
            "type": "string",
            "description": "Digital Object Identifier (DOI) of the paper"
          },
          "citation_count": {
            "type": "integer",
            "description": "Number of citations"
          },
          "open_access": {
            "type": "boolean",
            "description": "Open access status"
          },
          "pdf_url": {
            "type": [
              "string",
              "null"
            ],
            "description": "URL to PDF if available, or null if not available"
          },
          "keywords": {
            "type": [
              "array",
              "string"
            ],
            "description": "List of keywords/concepts associated with the paper, or 'Keywords not available' if none"
          },
          "article_type": {
            "type": "string",
            "description": "Type of article (e.g., 'article', 'review', etc.)"
          },
          "publisher": {
            "type": "string",
            "description": "Publisher name"
          },
          "openalex_id": {
            "type": "string",
            "description": "OpenAlex identifier (URL format)"
          },
          "url": {
            "type": "string",
            "description": "URL to the paper (DOI if available, otherwise OpenAlex ID)"
          },
          "data_quality": {
            "type": "object",
            "description": "Data quality indicators for the paper",
            "properties": {
              "has_abstract": {
                "type": "boolean",
                "description": "Whether the paper has an abstract"
              },
              "has_authors": {
                "type": "boolean",
                "description": "Whether author information is available"
              },
              "has_venue": {
                "type": "boolean",
                "description": "Whether venue/journal information is available"
              },
              "has_year": {
                "type": "boolean",
                "description": "Whether publication year is available"
              },
              "has_doi": {
                "type": "boolean",
                "description": "Whether DOI is available"
              },
              "has_citation_count": {
                "type": "boolean",
                "description": "Whether citation count is available and greater than 0"
              },
              "has_keywords": {
                "type": "boolean",
                "description": "Whether keywords/concepts are available"
              }
            }
          }
        }
      }
    },
    "test_examples": [
      {
        "search_keywords": "deep learning",
        "max_results": 10,
        "year_from": 2020,
        "year_to": 2023,
        "open_access": true
      }
    ]
  },
  {
    "type": "OpenAlexRESTTool",
    "name": "openalex_search_works",
    "description": "Search OpenAlex works (papers) via the /works endpoint. Use this to discover OpenAlex Work IDs (W...) and DOIs, then follow up with openalex_get_work or openalex_get_work_by_doi. For advanced filtering, pass a filter string like \"from_publication_date:2020-01-01,is_oa:true\".",
    "parameter": {
      "type": "object",
      "properties": {
        "search": {
          "type": "string",
          "description": "Full-text search query for works (title/abstract/etc.). Example: \"attention is all you need\"."
        },
        "filter": {
          "type": "string",
          "description": "OpenAlex filter string (comma-separated). Example: \"from_publication_date:2020-01-01,is_oa:true\"."
        },
        "per_page": {
          "type": "integer",
          "description": "Results per page (OpenAlex max 200).",
          "default": 10,
          "minimum": 1,
          "maximum": 200
        },
        "page": {
          "type": "integer",
          "description": "Page number (1-indexed).",
          "default": 1,
          "minimum": 1
        },
        "sort": {
          "type": "string",
          "description": "Sort order string, e.g. \"cited_by_count:desc\"."
        },
        "mailto": {
          "type": "string",
          "description": "Optional contact email for OpenAlex polite pool. If omitted, ToolUniverse uses a default."
        }
      },
      "required": ["search"]
    },
    "fields": {
      "path": "/works",
      "path_params": [],
      "param_map": {"per_page": "per-page"},
      "default_params": {"sort": "cited_by_count:desc"}
    },
    "return_schema": {
      "type": "object",
      "description": "Wrapper around OpenAlex /works search response.",
      "additionalProperties": true,
      "properties": {
        "status": {"type": "string", "enum": ["success", "error"]},
        "url": {"type": ["string", "null"]},
        "data": {
          "type": ["object", "null"],
          "additionalProperties": true,
          "properties": {
            "meta": {"type": "object", "additionalProperties": true},
            "results": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "id": {"type": "string"},
                  "title": {"type": ["string", "null"]},
                  "doi": {"type": ["string", "null"]},
                  "publication_year": {"type": ["integer", "null"]}
                }
              }
            }
          }
        },
        "error": {"type": ["string", "null"]},
        "status_code": {"type": ["integer", "null"]},
        "detail": {"type": ["string", "null"]}
      },
      "required": ["status"]
    },
    "test_examples": [
      {
        "search": "attention is all you need",
        "per_page": 3,
        "page": 1
      }
    ]
  },
  {
    "type": "OpenAlexRESTTool",
    "name": "openalex_get_work",
    "description": "Get a single OpenAlex work (paper) by OpenAlex Work ID (W...). You can pass either the short ID (e.g., \"W2626778328\") or the full URL (e.g., \"https://openalex.org/W2626778328\").",
