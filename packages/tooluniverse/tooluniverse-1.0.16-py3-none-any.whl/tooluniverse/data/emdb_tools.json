[
  {
    "type": "EMDBRESTTool",
    "name": "EMDB_get_structure",
    "description": "Get 3D electron microscopy (EM) structure data from the Electron Microscopy Data Bank (EMDB). Returns cryo-EM structure metadata including resolution (in \u00c5ngstr\u00f6ms), imaging method, organism, molecule details, voxel dimensions, map download URLs, and cross-references to PDB entries. Use this for structural biology research, comparing protein conformations, drug design, and downloading electron density maps for visualization or model fitting.",
    "parameter": {
      "type": "object",
      "properties": {
        "emdb_id": {
          "type": "string",
          "description": "EMDB structure identifier in format 'EMD-####' (e.g., 'EMD-1234', 'EMD-0001'). Find IDs via EMDB search or from publications."
        }
      },
      "required": [
        "emdb_id"
      ]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/emdb/api/entry/{emdb_id}",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "description": "ToolUniverse wrapper around EMDB API response.",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "description": "Execution status.",
          "enum": [
            "success",
            "error"
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Request URL used."
        },
        "data": {
          "type": [
            "object",
            "null"
          ],
          "description": "Raw EMDB API response body.",
          "additionalProperties": true,
          "properties": {
            "emdb_id": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "resolution": {
              "type": "number"
            },
            "method": {
              "type": "string"
            },
            "organism": {
              "type": "string"
            },
            "molecule": {
              "type": "string"
            },
            "deposition_date": {
              "type": "string"
            },
            "release_date": {
              "type": "string"
            },
            "authors": {
              "type": "array"
            },
            "journal": {
              "type": "string"
            },
            "volume": {
              "type": "string"
            },
            "page": {
              "type": "string"
            },
            "year": {
              "type": "integer"
            },
            "doi": {
              "type": "string"
            },
            "pdb_id": {
              "type": "string"
            },
            "map_url": {
              "type": "string"
            },
            "contour_level": {
              "type": "number"
            },
            "voxel_size": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "z": {
                  "type": "number"
                }
              }
            },
            "map_dimensions": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "x": {
                  "type": "integer"
                },
                "y": {
                  "type": "integer"
                },
                "z": {
                  "type": "integer"
                }
              }
            }
          }
        },
        "error": {
          "type": [
            "string",
            "null"
          ],
          "description": "Error summary if status=error."
        },
        "status_code": {
          "type": [
            "integer",
            "null"
          ],
          "description": "HTTP status code if available."
        },
        "detail": {
          "type": [
            "string",
            "null"
          ],
          "description": "Additional error detail (truncated)."
        }
      },
      "required": [
        "status"
      ]
    },
    "test_examples": [
      {
        "emdb_id": "EMD-1234"
      },
      {
        "emdb_id": "EMD-0001"
