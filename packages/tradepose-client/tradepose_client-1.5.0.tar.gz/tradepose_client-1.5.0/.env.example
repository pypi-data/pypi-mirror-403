# TradePose Client Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED: Authentication
# ==============================================================================
# You must provide either TRADEPOSE_API_KEY or TRADEPOSE_JWT_TOKEN

# API Key (recommended for production)
# Get your API key from: https://app.tradepose.com/dashboard/api-keys
TRADEPOSE_API_KEY=tp_live_your_api_key_here

# JWT Token (optional, used for initial API key creation via Clerk)
# TRADEPOSE_JWT_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================================================
# OPTIONAL: Server Configuration
# ==============================================================================

# Base URL for TradePose Gateway API
# Default: https://api.tradepose.com
# TRADEPOSE_SERVER_URL=https://api.tradepose.com

# ==============================================================================
# OPTIONAL: HTTP Configuration
# ==============================================================================

# Request timeout in seconds (1.0 - 600.0)
# Default: 30.0
# TRADEPOSE_TIMEOUT=30.0

# Maximum number of retry attempts (0 - 10)
# Default: 3
# TRADEPOSE_MAX_RETRIES=3

# ==============================================================================
# OPTIONAL: Task Polling Configuration
# ==============================================================================

# Default task polling interval in seconds (0.5 - 60.0)
# Default: 2.0
# TRADEPOSE_POLL_INTERVAL=2.0

# Default task polling timeout in seconds (10.0 - 3600.0)
# Default: 300.0
# TRADEPOSE_POLL_TIMEOUT=300.0

# ==============================================================================
# OPTIONAL: Logging Configuration
# ==============================================================================

# Enable debug mode (true/false)
# Default: false
# TRADEPOSE_DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
# TRADEPOSE_LOG_LEVEL=INFO
