{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API (Development)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/api",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000",
        "--host",
        "0.0.0.0",
        "--log-level",
        "debug"
      ],
      "python": "/Users/silviobaratto/anaconda3/envs/app/bin/python",
      "jinja": true,
      "envFile": "${workspaceFolder}/.env.dev",
      "console": "integratedTerminal"
    },
    {
      "name": "API (Production)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/api",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000",
        "--host",
        "0.0.0.0",
        "--log-level",
        "info"
      ],
      "python": "/Users/silviobaratto/anaconda3/envs/app/bin/python",
      "jinja": true,
      "envFile": "${workspaceFolder}/.env.prod",
      "console": "integratedTerminal"
    }
  ]
}
