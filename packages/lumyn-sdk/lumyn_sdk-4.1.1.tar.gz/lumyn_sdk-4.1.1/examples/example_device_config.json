{
    "_comment": "Example ConnectorX ANIMATE configuration (4 channels)",
    "_doc": "ConnectorX has 1 channel, ConnectorX Animate has 4 channels",
    
    "team": "9999",
    "network": {
        "mode": "USB"
    },
    "channels": {
        "1": {
            "id": "1",
            "length": 120,
            "brightness": 100,
            "zones": [
                {
                    "id": "front_left",
                    "type": "strip",
                    "length": 60,
                    "brightness": 100
                },
                {
                    "id": "front_right",
                    "type": "strip",
                    "length": 60,
                    "brightness": 100
                }
            ]
        },
        "2": {
            "id": "2",
            "length": 120,
            "brightness": 100,
            "zones": [
                {
                    "id": "rear_left",
                    "type": "strip",
                    "length": 60,
                    "brightness": 100
                },
                {
                    "id": "rear_right",
                    "type": "strip",
                    "length": 60,
                    "brightness": 100
                }
            ]
        },
        "3": {
            "id": "3",
            "length": 72,
            "brightness": 80,
            "zones": [
                {
                    "id": "underglow",
                    "type": "strip",
                    "length": 72,
                    "brightness": 80,
                    "reversed": true
                }
            ]
        },
        "4": {
            "id": "4",
            "length": 40,
            "brightness": 100,
            "zones": [
                {
                    "id": "matrix_display",
                    "type": "matrix",
                    "rows": 32,
                    "cols": 8,
                    "orientation": {
                        "cornerTopBottom": "top",
                        "cornerLeftRight": "left",
                        "axisLayout": "rows",
                        "sequenceLayout": "zigzag"
                    }
                }
            ]
        }
    },
    
    "groups": [
        {
            "id": "all_leds",
            "zoneIds": ["front_left", "front_right", "rear_left", "rear_right", "underglow"]
        },
        {
            "id": "front_leds",
            "zoneIds": ["front_left", "front_right"]
        },
        {
            "id": "rear_leds",
            "zoneIds": ["rear_left", "rear_right"]
        },
        {
            "id": "left_side",
            "zoneIds": ["front_left", "rear_left"]
        },
        {
            "id": "right_side",
            "zoneIds": ["front_right", "rear_right"]
        }
    ],
    
    "sequences": [
        {
            "id": "startup",
            "steps": [
                {
                    "animationId": "FadeIn",
                    "color": { "r": 0, "g": 255, "b": 0 },
                    "delay": 30,
                    "reversed": false,
                    "repeat": 1
                },
                {
                    "animationId": "Pulse",
                    "color": { "r": 0, "g": 255, "b": 0 },
                    "delay": 50,
                    "reversed": false,
                    "repeat": 2
                },
                {
                    "animationId": "Fill",
                    "color": { "r": 0, "g": 255, "b": 0 },
                    "delay": -1,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        },
        {
            "id": "error_flash",
            "steps": [
                {
                    "animationId": "Blink",
                    "color": { "r": 255, "g": 0, "b": 0 },
                    "delay": 100,
                    "reversed": false,
                    "repeat": 4
                },
                {
                    "animationId": "Breathe",
                    "color": { "r": 255, "g": 50, "b": 0 },
                    "delay": 40,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        },
        {
            "id": "alliance_red",
            "steps": [
                {
                    "animationId": "Fill",
                    "color": { "r": 255, "g": 0, "b": 0 },
                    "delay": -1,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        },
        {
            "id": "alliance_blue",
            "steps": [
                {
                    "animationId": "Fill",
                    "color": { "r": 0, "g": 0, "b": 255 },
                    "delay": -1,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        },
        {
            "id": "auto_mode",
            "steps": [
                {
                    "animationId": "Chase",
                    "color": { "r": 255, "g": 255, "b": 0 },
                    "delay": 30,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        },
        {
            "id": "disabled",
            "steps": [
                {
                    "animationId": "Breathe",
                    "color": { "r": 50, "g": 50, "b": 50 },
                    "delay": 10,
                    "reversed": false,
                    "repeat": 0
                }
            ]
        }
    ],
    
    "bitmaps": [
        {
            "id": "team_logo",
            "type": "static",
            "path": "team_logo.bmp"
        },
        {
            "id": "happy_eyes",
            "type": "animated",
            "folder": "happy_eyes",
            "delay": 250
        }
    ],
    
    "sensors": [
        {
            "id": "distance_sensor",
            "type": "VL53L1X",
            "pollingRateMs": 50,
            "connection": "I2C",
            "config": {
                "address": "0x29"
            }
        }
    ]
}
