# Include the README and license
include README.md
include LICENSE
include pyproject.toml
include setup.py

# For source distributions (sdist), include lumyn-c-sdk for building
# These files are ONLY needed for building from source, NOT for wheels
# lumyn-c-sdk is a git submodule that must be cloned with --recursive
recursive-include lumyn-c-sdk *.cpp *.c *.h *.hpp *.cmake *.txt
include lumyn-c-sdk/CMakeLists.txt
include lumyn-c-sdk/allowed_common_headers.txt
include lumyn-c-sdk/version.txt
recursive-include lumyn-c-sdk/cmake *
recursive-include lumyn-c-sdk/common *.cpp *.c *.h *.hpp
include lumyn-c-sdk/common/CMakeLists.txt
recursive-include lumyn-c-sdk/include *.h *.hpp
recursive-include lumyn-c-sdk/src *.cpp *.h *.hpp

# Include lumyn_sdk Python package
recursive-include lumyn_sdk *.py *.pyi
include lumyn_sdk/py.typed
include lumyn_sdk/CMakeLists.txt
recursive-include lumyn_sdk/src *.cpp *.h *.hpp

# Include examples
recursive-include examples *.py *.json

# Include tests
recursive-include tests *.py

# EXCLUDE from wheel (prune only affects sdist, so for wheel we rely on tool.setuptools.packages)
# Prune build directories that shouldn't be in sdist either
prune lumyn-c-sdk/build
prune lumyn-c-sdk/build-windows
prune lumyn-c-sdk/build-linux
prune lumyn_sdk/Release
prune lumyn_sdk/build

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib
global-exclude *.pyd
global-exclude .git*
global-exclude .DS_Store
global-exclude *.obj
global-exclude *.o
global-exclude *.a
global-exclude *.lib
global-exclude *.exp
