include pyproject.toml
include setup.py
include setup_wheel.py
include helper.cc.template
recursive-include scripts *.sh

# Include vendored LibXC core in source distributions.
recursive-include jxc/_libxc libxc*.so libxc*.dylib

# Exclude any prebuilt helper binaries from sdists; helper is built
# per-Python ABI by setuptools at install/build time.
exclude jxc/helper*.so
exclude jxc/helper*.dylib

# Include LibXC sources and third-party headers needed to rebuild helper if desired.
recursive-include libxc *.h *.c *.cc *.hpp
recursive-include third_party/pybind11 *.h *.hpp
recursive-include third_party/visit_struct *.h *.hpp
