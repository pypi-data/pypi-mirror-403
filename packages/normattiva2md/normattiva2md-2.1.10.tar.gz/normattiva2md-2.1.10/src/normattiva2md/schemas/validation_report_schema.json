{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Validation Report",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "description": "Path or URL of the source XML"
    },
    "overall_status": {
      "type": "string",
      "enum": ["PASS", "FAIL", "WARNING"]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "check_name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["PASS", "FAIL", "WARNING"]
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object"
          }
        },
        "required": ["check_name", "status"]
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["type", "message"]
      }
    }
  },
  "required": ["timestamp", "source", "overall_status", "checks"]
}
