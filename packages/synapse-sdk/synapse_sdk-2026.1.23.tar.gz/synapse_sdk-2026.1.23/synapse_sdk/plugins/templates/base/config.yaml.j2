name: {{ name }}
code: {{ code }}
version: {{ version }}
category: {{ category }}
description: {{ description }}
{%- if data_type %}
data_type: {{ data_type }}
{%- endif %}
{%- if tasks %}
tasks:
{%- for task in tasks %}
  - {{ task }}
{%- endfor %}
{%- endif %}
{%- if annotation_category %}
annotation_category: {{ annotation_category }}
{%- endif %}
{%- if annotation_type %}
annotation_type: {{ annotation_type }}
{%- endif %}
{%- if smart_tool_type %}
smart_tool_type: {{ smart_tool_type }}
{%- endif %}
{%- if supported_data_types %}
supported_data_types:
{%- for dt in supported_data_types %}
  - {{ dt }}
{%- endfor %}
{%- endif %}

actions:
{%- for action in actions %}
  {{ action.name }}:
    entrypoint: {{ action.entrypoint }}
    method: {{ action.method }}
{%- endfor %}
