  "validation_result": {
    "validation_passed": <boolean>,
    "issues_found": ["<string>"],
    "details": "<string>",
    "checks_table": "<string markdown>",
    "checks": [
      {
        "check_name": "<string>",
        "status": "<PASS|FAIL|WARNING>",
        "confidence": <float>,
        "rationale": "<string>",
        "evidence": "<string>"
      }
    ]
  },
  "tools_used": {
    "aegis.get_sow_retention_info": <integer>
  },
  "error": "<string or empty>"
}

