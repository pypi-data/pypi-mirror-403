{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://topaz.ai/schemas/ui_manifest_individual.schema.json",
  "title": "Topaz Individual UI Manifest",
  "type": "object",
  "required": ["title", "subtitle", "agents", "interaction_diagram"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Human-readable pipeline name"
    },
    "subtitle": {
      "type": "string",
      "description": "Detailed description of pipeline purpose"
    },
    "agents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique agent identifier"
          },
          "title": {
            "type": "string",
            "description": "Human-readable agent name"
          },
          "subtitle": {
            "type": "string",
            "description": "Detailed description of agent purpose"
          },
          "icon": {
            "type": "string",
            "description": "Path to agent icon image"
          }
        },
        "required": ["id", "title", "subtitle", "icon"],
        "additionalProperties": false
      }
    },
    "interaction_diagram": {
      "type": "string",
      "description": "Path to interaction diagram image"
    }
  },
  "additionalProperties": false
}