Input: "2+2, 3*4, 5-1"
{
  "problems": [
    {"expression": "2+2", "index": 1},
    {"expression": "3*4", "index": 2},
    {"expression": "5-1", "index": 3}
  ],
  "total_count": 3,
  "error": ""
}

