{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://topaz-agent-kit/core/schemas/ui_manifest.schema.json",
  "title": "Topaz Global UI Manifest",
  "description": "Schema for global UI manifest configuration file (ui_manifest.yml)",
  "type": "object",
  "required": ["title", "subtitle", "brand", "appearance", "chat", "pipelines", "footer"],
  "properties": {
    "title": { 
      "type": "string",
      "description": "Human-readable project title"
    },
    "subtitle": { 
      "type": "string",
      "description": "Detailed description of the project purpose"
    },
    "brand": {
      "type": "object",
      "properties": {
        "logo": { "type": "string" },
        "logo2": { "type": "string" }
      },
      "required": ["logo"],
      "additionalProperties": false
    },
    "appearance": {
      "type": "object",
      "properties": {
        "default_theme": { "enum": ["system", "light", "dark"] },
        "default_accent": { "type": "string" }
      },
      "required": ["default_theme", "default_accent"],
      "additionalProperties": false
    },
    "chat": {
      "type": "object",
      "properties": {
        "placeholder": { "type": "string" }
      },
      "required": ["placeholder"],
      "additionalProperties": false
    },
    "pipelines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "icon": { "type": "string" },
          "ui_manifest": { "type": "string" }
        },
        "required": ["id", "title", "subtitle", "icon", "ui_manifest"],
        "additionalProperties": false
      }
    },
    "operations": {
      "type": "object",
      "description": "Operations Dashboard configuration",
      "properties": {
        "append_title_suffix": {
          "type": "boolean",
          "description": "Whether to append '- Operations Center' to the title (defaults to true)",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "operations_workflow": {
      "type": "object",
      "description": "Defines the pipeline workflow diagram shown in the Operations Dashboard header.",
      "properties": {
        "nodes": {
          "type": "array",
          "description": "Ordered list of pipeline IDs to display in the workflow diagram",
          "items": { "type": "string" },
          "minItems": 1
        },
        "edges": {
          "type": "array",
          "description": "Connections between pipelines",
          "items": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string",
                "description": "Source pipeline ID"
              },
              "to": {
                "type": "string",
                "description": "Target pipeline ID"
              }
            },
            "required": ["from", "to"],
            "additionalProperties": false
          }
        },
        "output_path": {
          "type": "string",
          "description": "Relative path for generated SVG (defaults to 'assets/operations_workflow.svg')"
        }
      },
      "required": ["nodes"],
      "additionalProperties": false
    },
    "footer": {
      "type": "object",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

