{
  "name": "rtsp_camera",
  "description": "RTSP camera data source template",
  "source_uri_pattern": "rtsp://{ip}:{port}/{path}",
  "default_port": 554,
  "default_path": "stream",
  "fields": {
    "name": {
      "required": true,
      "type": "string"
    },
    "source_uri": {
      "required": true,
      "type": "string"
    },
    "mac": {
      "required": false,
      "type": "string"
    },
    "serial": {
      "required": false,
      "type": "string"
    },
    "hostname": {
      "required": false,
      "type": "string"
    },
    "ip": {
      "required": true,
      "type": "string"
    },
    "port": {
      "required": false,
      "type": "string",
      "default": "554"
    }
  }
}
