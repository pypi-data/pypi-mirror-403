{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "web": {
      "type": [
        "null",
        "object",
        "string"
      ],
      "properties": {
        "port": {
          "type": [
            "integer",
            "string"
          ],
          "default": 8090,
          "description": "Port to run web server",
          "title": "Port"
        },
        "proxy_port": {
          "type": [
            "null",
            "integer",
            "string"
          ],
          "description": "Reverse proxy port (used in HA discovery URL). If not set, uses 'port' value.",
          "title": "Proxy port"
        },
        "auth": {
          "type": [
            "null",
            "object",
            "string"
          ],
          "default": {},
          "properties": {
            "username": {
              "type": "string",
              "description": "Username to connect to web interface",
              "title": "Username"
            },
            "password": {
              "type": "string",
              "description": "Password to web interface",
              "title": "Password"
            }
          },
          "description": "Auth if defined",
          "title": "Auth"
        }
      },
      "description": "https://boneio.eu/docs/black/0.9.x-dev/configuration/web \n Web section of boneIO Black. It enables web interface. Default on port 8090.",
      "title": "Web"
    }
  }
}