{
  "name": "korean-keyword-extraction-benchmark",
  "version": "1.0.0",
  "description": "한국어 키워드 추출 벤치마크 - 형태소 분석 기반 vs 공백 기반",
  "purpose": "형태소 분석이 의미있는 키워드를 더 정확하게 추출하는지 측정",
  "evaluation_metrics": ["precision", "recall", "f1"],
  "methodology": {
    "whitespace_baseline": "공백으로 분리 후 2글자 이상 토큰 추출",
    "morpheme_method": "Kiwi 형태소 분석 후 NNG, NNP, VV, VA 품사만 추출",
    "ground_truth": "도메인 전문가가 수동으로 라벨링한 핵심 키워드"
  },
  "test_cases": [
    {
      "test_id": "kw-001",
      "text": "보험료가 월 15만원이며, 납입 기간은 20년입니다.",
      "ground_truth_keywords": ["보험료", "15만원", "납입", "기간", "20년"],
      "whitespace_expected": ["보험료가", "15만원이며", "납입", "기간은", "20년입니다"],
      "morpheme_expected": ["보험료", "15만원", "납입", "기간", "20년"],
      "note": "조사 '가/은/입니다'가 포함된 토큰 vs 순수 키워드"
    },
    {
      "test_id": "kw-002",
      "text": "사망보험금은 피보험자 사망 시 수익자에게 지급됩니다.",
      "ground_truth_keywords": ["사망보험금", "피보험자", "사망", "수익자", "지급"],
      "whitespace_expected": ["사망보험금은", "피보험자", "사망", "수익자에게", "지급됩니다"],
      "morpheme_expected": ["사망보험금", "피보험자", "사망", "수익자", "지급"],
      "note": "조사 '은/에게/됩니다' 제거 효과"
    },
    {
      "test_id": "kw-003",
      "text": "암 진단비가 3천만원 지급되며, 면책기간은 90일입니다.",
      "ground_truth_keywords": ["암", "진단비", "3천만원", "지급", "면책기간", "90일"],
      "whitespace_expected": ["진단비가", "3천만원", "지급되며", "면책기간은", "90일입니다"],
      "morpheme_expected": ["암", "진단비", "3천만원", "지급", "면책기간", "90일"],
      "note": "형태소 분석으로 '암' 단독 추출 가능"
    },
    {
      "test_id": "kw-004",
      "text": "해약환급금은 납입한 보험료의 일정 비율로 계산됩니다.",
      "ground_truth_keywords": ["해약환급금", "납입", "보험료", "비율", "계산"],
      "whitespace_expected": ["해약환급금은", "납입한", "보험료의", "일정", "비율로", "계산됩니다"],
      "morpheme_expected": ["해약환급금", "납입", "보험료", "일정", "비율", "계산"],
      "note": "조사 '은/한/의/로/됩니다' 제거 및 원형 추출"
    },
    {
      "test_id": "kw-005",
      "text": "뇌졸중과 심근경색 진단 시 각각 2천만원이 지급됩니다.",
      "ground_truth_keywords": ["뇌졸중", "심근경색", "진단", "2천만원", "지급"],
      "whitespace_expected": ["뇌졸중과", "심근경색", "진단", "각각", "2천만원이", "지급됩니다"],
      "morpheme_expected": ["뇌졸중", "심근경색", "진단", "2천만원", "지급"],
      "note": "접속조사 '과' 분리, 부사 '각각' 제외"
    },
    {
      "test_id": "kw-006",
      "text": "입원하면 1일당 5만원의 입원일당을 받을 수 있습니다.",
      "ground_truth_keywords": ["입원", "1일당", "5만원", "입원일당"],
      "whitespace_expected": ["입원하면", "1일당", "5만원의", "입원일당을", "받을", "있습니다"],
      "morpheme_expected": ["입원", "1일", "5만원", "입원일당", "받다"],
      "note": "동사 원형 '입원하다→입원', '받다' 추출"
    },
    {
      "test_id": "kw-007",
      "text": "수술비는 수술 종류에 따라 50만원에서 500만원까지 지급됩니다.",
      "ground_truth_keywords": ["수술비", "수술", "종류", "50만원", "500만원", "지급"],
      "whitespace_expected": ["수술비는", "수술", "종류에", "따라", "50만원에서", "500만원까지", "지급됩니다"],
      "morpheme_expected": ["수술비", "수술", "종류", "50만원", "500만원", "지급"],
      "note": "조사 및 부사 제거"
    },
    {
      "test_id": "kw-008",
      "text": "가입 연령은 만 15세부터 60세까지이며, 비흡연자 할인이 적용됩니다.",
      "ground_truth_keywords": ["가입", "연령", "15세", "60세", "비흡연자", "할인", "적용"],
      "whitespace_expected": ["가입", "연령은", "15세부터", "60세까지이며", "비흡연자", "할인이", "적용됩니다"],
      "morpheme_expected": ["가입", "연령", "15세", "60세", "비흡연자", "할인", "적용"],
      "note": "조사 '은/부터/까지이며/이/됩니다' 제거"
    },
    {
      "test_id": "kw-009",
      "text": "보험금 청구는 모바일 앱이나 고객센터를 통해 가능합니다.",
      "ground_truth_keywords": ["보험금", "청구", "모바일", "앱", "고객센터"],
      "whitespace_expected": ["보험금", "청구는", "모바일", "앱이나", "고객센터를", "통해", "가능합니다"],
      "morpheme_expected": ["보험금", "청구", "모바일", "앱", "고객센터", "가능"],
      "note": "조사 및 접속조사 제거"
    },
    {
      "test_id": "kw-010",
      "text": "청약 철회 시 납입한 보험료 전액이 환급됩니다.",
      "ground_truth_keywords": ["청약", "철회", "납입", "보험료", "전액", "환급"],
      "whitespace_expected": ["청약", "철회", "납입한", "보험료", "전액이", "환급됩니다"],
      "morpheme_expected": ["청약", "철회", "납입", "보험료", "전액", "환급"],
      "note": "관형사형 어미 '한' 제거, 원형 추출"
    }
  ],
  "expected_results": {
    "whitespace_precision": "약 40-60% (조사/어미 포함된 토큰 매칭 실패)",
    "morpheme_precision": "약 80-95% (순수 키워드 추출)",
    "improvement": "형태소 분석으로 20-50%p 개선 예상"
  }
}
