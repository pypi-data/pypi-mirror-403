{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["js/**/*.ts"],
  "exclude": ["js/**/*.test.ts", "node_modules"]
}
