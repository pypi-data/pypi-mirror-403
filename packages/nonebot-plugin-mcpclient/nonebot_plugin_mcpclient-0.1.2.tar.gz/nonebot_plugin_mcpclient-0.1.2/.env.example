# NoneBot2 配置示例

# ===== MCP 插件配置 =====

# MCP 服务器配置 (JSON 格式)
# 支持三种传输类型:
#   - stdio: 通过子进程通信 (本地 MCP 服务器)
#   - sse: 通过 HTTP GET + SSE 通信 (标准远程 MCP)
#   - streamablehttp: 通过 HTTP POST 通信 (企业级 MCP, 如麦当劳)
MCP_SERVERS='{
  "memory": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "@anthropic/mcp-memory"],
    "friendly_name": "长期记忆",
    "description": "跨会话的知识图谱记忆，记住用户偏好、历史话题"
  },
  "github": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "@anthropic/mcp-github"],
    "env": {"GITHUB_TOKEN": "ghp_your_token_here"},
    "friendly_name": "GitHub",
    "description": "查询仓库、创建 Issue、读取代码"
  },
  "filesystem": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "@anthropic/mcp-filesystem", "/data/shared"],
    "friendly_name": "文件系统",
    "description": "读写服务器文件"
  },
  "mcd": {
    "type": "streamablehttp",
    "url": "https://mcp.mcd.cn/mcp-servers/mcd-mcp",
    "headers": {
      "Authorization": "Bearer xxxxxxxx"
    },
    "friendly_name": "麦当劳",
    "allowed_users": [
      "onebotv11+*+123456789"
    ]
  }
}'

# 工具调用超时 (秒)
MCP_TOOL_TIMEOUT=30

# 工具缓存过期时间 (秒), 0 表示不过期
MCP_CACHE_TTL=3600
