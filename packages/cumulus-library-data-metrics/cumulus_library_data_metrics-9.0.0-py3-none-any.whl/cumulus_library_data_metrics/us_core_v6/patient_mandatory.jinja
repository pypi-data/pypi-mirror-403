-- CUMULUS-QUIRK
-- This profile also requires a patient identifier, name, and certain telecom fields, all of which
-- Cumulus ETL strips out. So we don't bother checking that here.

{% import 'us_core_v6/utils.jinja' as core_utils %}

WITH
tmp_simplified AS (
    SELECT
        id,
        {{ utils.extract_status(src) }} AS status,
        {{ utils.is_code_valid(
            'gender',
            'male | female | other | unknown'
        )}} AS valid_gender
    FROM {{ src }}
)

{%
set ns.fields = [
    'valid_gender',
]
%}

{{ core_utils.select_all_fields(ns.fields) }}
