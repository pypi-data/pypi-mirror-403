{% if src == "Condition" %}
    {% import 'us_core_v6/condition_utils.jinja' as con_utils %}
    {% if name == "Enc" %}
        {{ con_utils.extract_encounter_diagnosis_slice(src) }}
    {% else %}
        {{ con_utils.extract_problem_or_health_concern_slice(src) }}
    {% endif %}
{% elif src == "DiagnosticReport" %}
    {% import 'us_core_v6/diagnosticreport_utils.jinja' as dr_utils %}
    {% if name == "Lab" %}
        {{ dr_utils.extract_lab_slice(src) }}
