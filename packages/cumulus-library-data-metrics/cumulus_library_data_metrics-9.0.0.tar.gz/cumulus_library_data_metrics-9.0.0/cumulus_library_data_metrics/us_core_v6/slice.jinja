    {% import 'us_core_v6/observation_utils.jinja' as obs_utils %}
    {% if loinc %}
        {{ obs_utils.extract_loinc_slice(src, loinc) }}
    {% elif category %}
        {{ obs_utils.extract_category_slice(src, category) }}
