#plot-controls {
    width: 33%;
    padding: 1;
    border: solid $primary;
    background: $surface;
    color: $text;
}

#plot-display {
    width: 67%;
    padding: 1;
    border: solid $primary;
    background: $surface;
    color: $text;
}

#plot-controls Input,
#plot-controls Select,
#plot-controls Button {
    width: 100%;
    margin: 0 0 1 0;
}

#plot-area {
    padding: 1;
    color: $text;
}

#plot-loading {
    dock: top;
    padding: 0 1;
}
