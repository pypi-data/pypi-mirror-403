#sidebar {
    layer: overlay;
    dock: left;
    width: 30%;
    background: $panel;
    transition: offset 250ms in_out_cubic;
    offset-x: -100%;
    color: $text;
    border: solid $primary;
}

#sidebar.--visible {
    offset-x: 0;
}

Screen {
    overflow-x: auto;
}

#main-content {
    background: $surface;
    padding: 1;
    height: 100%;
    width: 1fr;
}