    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Debug CLI DB-ZIP",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ekfsm/cli.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "args": ["-v","tests/zip2-ccu-only.yaml", "write","serial","12312312"],
            "justMyCode": true,
            "sudo": true
        },
        {
            "name": "Debug CLI SIM",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ekfsm/cli.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "args": ["-v","-s","tests/sim/sys","tests/sim/test_system.yaml", "show"],
            "justMyCode": true,
            "sudo": true
        },
        {
            "name": "Python: Current File (sudo)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "sudo": true
        },
        {
            "name": "Python Debugger: Current File (sudo)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "sudo": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "sudo": false
        }
    ]
}
