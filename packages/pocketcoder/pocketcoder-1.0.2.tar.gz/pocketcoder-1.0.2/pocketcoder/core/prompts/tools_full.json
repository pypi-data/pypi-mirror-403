{
  "read_file": {
    "params": ["path"],
    "required": ["path"],
    "description": "Read file content. Supports fuzzy path matching.",
    "example": "<read_file><path>main.py</path></read_file>"
  },
  "write_file": {
    "params": ["path", "content"],
    "required": ["path", "content"],
    "description": "Create new file or overwrite existing. Auto-creates directories.",
    "example": "<write_file><path>hello.py</path><content>print('hi')</content></write_file>"
  },
  "list_files": {
    "params": ["path", "recursive"],
    "required": ["path"],
    "description": "List files in directory with tree structure.",
    "example": "<list_files><path>.</path><recursive>false</recursive></list_files>"
  },
  "find_file": {
    "params": ["filename"],
    "required": ["filename"],
    "description": "Find file location by name. For FILES only, not folders!",
    "example": "<find_file><filename>config.py</filename></find_file>"
  },
  "search_files": {
    "params": ["pattern", "path", "include"],
    "required": ["pattern"],
    "description": "Search for pattern in file contents (grep).",
    "example": "<search_files><pattern>TODO</pattern><path>.</path></search_files>"
  },
  "glob_files": {
    "params": ["pattern", "path"],
    "required": ["pattern"],
    "description": "Find files matching glob pattern.",
    "example": "<glob_files><pattern>**/*.py</pattern><path>.</path></glob_files>"
  },
  "open_file": {
    "params": ["path"],
    "required": ["path"],
    "description": "Open file in default application (browser, editor).",
    "example": "<open_file><path>index.html</path></open_file>"
  },
  "execute_command": {
    "params": ["cmd"],
    "required": ["cmd"],
    "description": "Execute shell command. Requires user confirmation.",
    "example": "<execute_command><cmd>python --version</cmd></execute_command>"
  },
  "ask_question": {
    "params": ["question", "options"],
    "required": ["question"],
    "description": "Ask user for clarification.",
    "example": "<ask_question><question>Which DB?</question><options>PostgreSQL,SQLite</options></ask_question>"
  },
  "update_todo": {
    "params": ["tasks"],
    "required": ["tasks"],
    "description": "Update task list. Tasks is JSON array.",
    "example": "<update_todo><tasks>[{\"content\":\"Fix bug\",\"status\":\"in_progress\"}]</tasks></update_todo>"
  },
  "attempt_completion": {
    "params": ["result", "command"],
    "required": ["result"],
    "description": "Signal task is complete.",
    "example": "<attempt_completion><result>Created API</result></attempt_completion>"
  },
  "switch_mode": {
    "params": ["mode", "reason"],
    "required": ["mode"],
    "description": "Switch mode: code/architect/ask/debug.",
    "example": "<switch_mode><mode>architect</mode><reason>Planning</reason></switch_mode>"
  },
  "remember_fact": {
    "params": ["key", "value"],
    "required": ["key", "value"],
    "description": "Save fact to long-term memory.",
    "example": "<remember_fact><key>user_name</key><value>Alex</value></remember_fact>"
  },
  "recall_fact": {
    "params": ["key"],
    "required": ["key"],
    "description": "Recall fact from memory.",
    "example": "<recall_fact><key>user_name</key></recall_fact>"
  },
  "list_facts": {
    "params": [],
    "required": [],
    "description": "List all remembered facts.",
    "example": "<list_facts></list_facts>"
  },
  "forget_fact": {
    "params": ["key"],
    "required": ["key"],
    "description": "Delete fact from memory.",
    "example": "<forget_fact><key>user_name</key></forget_fact>"
  },
  "save_note": {
    "params": ["category", "content"],
    "required": ["category", "content"],
    "description": "Save note to NOTES.md.",
    "example": "<save_note><category>architecture</category><content>Uses Flask</content></save_note>"
  },
  "load_notes": {
    "params": [],
    "required": [],
    "description": "Load all notes.",
    "example": "<load_notes></load_notes>"
  },
  "apply_diff": {
    "params": ["path", "diff"],
    "required": ["path", "diff"],
    "description": "Apply unified diff. Must have @@ header.",
    "example": "<apply_diff><path>main.py</path><diff>@@ -1,2 +1,3 @@\\n+import os</diff></apply_diff>"
  },
  "multi_edit": {
    "params": ["edits"],
    "required": ["edits"],
    "description": "Apply multiple SEARCH/REPLACE edits.",
    "example": "<multi_edit><edits>[{\"path\":\"a.py\",\"search\":\"old\",\"replace\":\"new\"}]</edits></multi_edit>"
  },
  "insert_at_line": {
    "params": ["path", "line_number", "content"],
    "required": ["path", "line_number", "content"],
    "description": "Insert content at specific line.",
    "example": "<insert_at_line><path>main.py</path><line_number>1</line_number><content>import os</content></insert_at_line>"
  },
  "delete_lines": {
    "params": ["path", "start_line", "end_line"],
    "required": ["path", "start_line", "end_line"],
    "description": "Delete lines from file.",
    "example": "<delete_lines><path>main.py</path><start_line>5</start_line><end_line>10</end_line></delete_lines>"
  }
}
