{
  "$id":"metadata.llm.base", // instance id
  
  "summary":{},
  
  // for loop command
  "loop":{
    "entities":"${loop_entities}",
    "map":"${loop_map}",
    "count":"${loop_count:--1}", // max loop count, -1 means no limit
  },

  "request":{
    "body":"${request_body}", // llm api request body
  },
  "prompt":{
    "max_chars":"${max_chars:-4000}", // 最大输入字符数
    "user":{
      "prefix":"${user_prefix:-}",
      "suffix":"${user_suffix:-}", 
      "content":"${user_content}",
    },
    "system":{
      "content":"${system_content}",
    }
  }
}