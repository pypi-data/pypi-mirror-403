{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Formualizer I/O Manifest (SheetPort)",
  "description": "Specification that binds typed input/output ports to a spreadsheet so it can be treated as a pure function.",
  "type": "object",
  "properties": {
    "capabilities": {
      "description": "Optional conformance capabilities for this manifest.",
      "anyOf": [
        {
          "$ref": "#/$defs/Capabilities"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "manifest": {
      "description": "Human-facing metadata describing the manifest.",
      "$ref": "#/$defs/ManifestMeta"
    },
    "ports": {
      "description": "Ordered list of typed ports.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Port"
      }
    },
    "spec": {
      "description": "Identifier for this specification (must be `fio`).",
      "type": "string"
    },
    "spec_version": {
      "$ref": "#/$defs/SpecVersion"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "capabilities": {
        "features": null,
        "profile": "core-v0"
      },
      "manifest": {
        "description": "Expose the workbook as a function that ingests inventory data and produces restock recommendations.",
        "id": "supply-planning-io",
        "metadata": null,
        "name": "Supply Planning I/O",
        "tags": null,
        "workbook": {
          "date_system": 1900,
          "locale": "en-US",
          "timezone": null,
          "uri": "file://Samples/SupplyPlan.xlsx"
        }
      },
      "ports": [
        {
          "constraints": {
            "enum": null,
            "max": null,
            "min": null,
            "nullable": null,
            "pattern": "^[A-Z]{2}-\\d{3}$"
          },
          "default": null,
          "description": "Warehouse identifier used for restock planning.",
          "dir": "in",
          "id": "warehouse_code",
          "location": {
            "a1": "Inputs!B2"
          },
          "partition_key": null,
          "required": true,
          "schema": {
            "format": null,
            "type": "string"
          },
          "shape": "scalar",
          "units": null
        },
        {
          "constraints": null,
          "default": null,
          "description": "Planning horizon (month and year).",
          "dir": "in",
          "id": "planning_window",
          "location": {
            "a1": "Inputs!B1:C1"
          },
          "partition_key": null,
          "required": true,
          "schema": {
            "fields": {
              "month": {
                "constraints": {
                  "enum": null,
                  "max": 12.0,
                  "min": 1.0,
                  "nullable": null,
                  "pattern": null
                },
                "location": {
                  "a1": "Inputs!B1"
                },
                "type": "integer",
                "units": null
              },
              "year": {
                "constraints": null,
                "location": {
                  "a1": "Inputs!C1"
                },
                "type": "integer",
                "units": null
              }
            },
            "kind": "record"
          },
          "shape": "record",
          "units": null
        },
        {
          "constraints": null,
          "default": null,
          "description": "Current inventory snapshot by SKU.",
          "dir": "in",
          "id": "sku_inventory",
          "location": {
            "layout": {
              "anchor_col": "A",
              "header_row": 1,
              "kind": "header_contiguous_v1",
              "marker_text": null,
              "sheet": "Inventory",
              "terminate": "first_blank_row"
            }
          },
          "partition_key": null,
          "required": true,
          "schema": {
            "columns": [
              {
                "col": "A",
                "format": null,
                "name": "sku",
                "type": "string",
                "units": null
              },
              {
                "col": "B",
                "format": null,
                "name": "description",
                "type": "string",
                "units": null
              },
              {
                "col": "C",
                "format": null,
                "name": "on_hand",
                "type": "integer",
                "units": null
              },
              {
                "col": "D",
                "format": null,
                "name": "safety_stock",
                "type": "integer",
                "units": null
              },
              {
                "col": "E",
                "format": null,
                "name": "lead_time_days",
                "type": "integer",
                "units": null
              }
            ],
            "keys": [
              "sku"
            ],
            "kind": "table"
          },
          "shape": "table",
          "units": null
        },
        {
          "constraints": null,
          "default": null,
          "description": "High-level metrics summarizing the recommended restock.",
          "dir": "out",
          "id": "restock_summary",
          "location": {
            "a1": "Outputs!B2:B6"
          },
          "partition_key": null,
          "required": true,
          "schema": {
            "fields": {
              "estimated_cost": {
                "constraints": null,
                "location": {
                  "a1": "Outputs!B4"
                },
                "type": "number",
                "units": {
                  "currency": "USD"
                }
              },
              "next_restock_date": {
                "constraints": null,
                "location": {
                  "a1": "Outputs!B5"
                },
                "type": "date",
                "units": null
              },
              "total_skus": {
                "constraints": null,
                "location": {
                  "a1": "Outputs!B2"
                },
                "type": "integer",
                "units": null
              },
              "units_to_order": {
                "constraints": null,
                "location": {
                  "a1": "Outputs!B3"
                },
                "type": "integer",
                "units": null
              }
            },
            "kind": "record"
          },
          "shape": "record",
          "units": null
        }
      ],
      "spec": "fio",
      "spec_version": "0.3.0"
    }
  ],
  "required": [
    "spec",
    "spec_version",
    "manifest",
    "ports"
  ],
  "$defs": {
    "Capabilities": {
      "description": "Optional capabilities block for feature gating.",
      "type": "object",
      "properties": {
        "features": {
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "items": {
            "type": "string"
          }
        },
        "profile": {
          "$ref": "#/$defs/Profile",
          "default": "core-v0"
        }
      },
      "additionalProperties": false
    },
    "Constraints": {
      "description": "Constraints applied to a port or field.",
      "type": "object",
      "properties": {
        "enum": {
          "description": "Enumerated set of allowed categorical values. Entries are compared by exact JSON equality after type checking; numeric values are not normalized (e.g., 5 != 5.0).",
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "items": true
        },
        "max": {
          "description": "Maximum allowed numeric value.",
          "type": [
            "number",
            "null"
          ],
          "format": "double",
          "default": null
        },
        "min": {
          "description": "Minimum allowed numeric value.",
          "type": [
            "number",
            "null"
          ],
          "format": "double",
          "default": null
        },
        "nullable": {
          "description": "Whether null/blank values are permitted.",
          "type": [
            "boolean",
            "null"
          ],
          "default": null
        },
        "pattern": {
          "description": "Regular expression pattern string.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        }
      },
      "additionalProperties": false
    },
    "Direction": {
      "description": "Port direction.",
      "oneOf": [
        {
          "description": "Input port (values provided to the workbook).",
          "type": "string",
          "const": "in"
        },
        {
          "description": "Output port (values read from the workbook).",
          "type": "string",
          "const": "out"
        }
      ]
    },
    "FieldSelector": {
      "anyOf": [
        {
          "$ref": "#/$defs/SelectorA1"
        },
        {
          "$ref": "#/$defs/SelectorName"
        },
        {
          "$ref": "#/$defs/SelectorStructRef"
        }
      ]
    },
    "LayoutDescriptor": {
      "type": "object",
      "properties": {
        "anchor_col": {
          "description": "Column letter where the layout begins.",
          "type": "string"
        },
        "header_row": {
          "description": "1-based index of the header row.",
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "kind": {
          "description": "Layout resolution behavior (defaults to `header_contiguous_v1`).",
          "$ref": "#/$defs/LayoutKind",
          "default": "header_contiguous_v1"
        },
        "marker_text": {
          "description": "Marker text required when `terminate` equals `until_marker`.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "sheet": {
          "description": "Sheet containing the layout.",
          "type": "string"
        },
        "terminate": {
          "description": "Termination rule for the layout.",
          "$ref": "#/$defs/LayoutTermination"
        }
      },
      "additionalProperties": false,
      "required": [
        "sheet",
        "header_row",
        "anchor_col",
        "terminate"
      ]
    },
    "LayoutKind": {
      "description": "Layout resolution behavior for layout selectors.",
      "oneOf": [
        {
          "description": "Header-driven layout using contiguous columns starting at `anchor_col`.",
          "type": "string",
          "const": "header_contiguous_v1"
        }
      ]
    },
    "LayoutTermination": {
      "type": "string",
      "enum": [
        "first_blank_row",
        "sheet_end",
        "until_marker"
      ]
    },
    "ManifestMeta": {
      "description": "Manifest metadata block.",
      "type": "object",
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "id": {
          "description": "Stable identifier for the manifest (lowercase alphanumeric + hyphen).",
          "type": "string"
        },
        "metadata": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true,
          "default": null
        },
        "name": {
          "description": "Human readable manifest name.",
          "type": "string"
        },
        "tags": {
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "items": {
            "type": "string"
          }
        },
        "workbook": {
          "anyOf": [
            {
              "$ref": "#/$defs/WorkbookMeta"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name"
      ]
    },
    "Port": {
      "description": "Port definition.",
      "type": "object",
      "properties": {
        "constraints": {
          "description": "Optional constraints applied to values.",
          "anyOf": [
            {
              "$ref": "#/$defs/Constraints"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "default": {
          "description": "Optional default value (inputs only).",
          "default": null
        },
        "description": {
          "description": "Optional documentation.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "dir": {
          "description": "Direction (input or output).",
          "$ref": "#/$defs/Direction"
        },
        "id": {
          "description": "Unique identifier for the port within the manifest.",
          "type": "string"
        },
        "location": {
          "description": "Selector binding the port to a workbook region.",
          "$ref": "#/$defs/Selector"
        },
        "partition_key": {
          "description": "Reserved hint for future partitioning/sharding semantics. No effect in `core-v0` runtimes.",
          "type": [
            "boolean",
            "null"
          ],
          "default": null
        },
        "required": {
          "description": "Whether the port value is required (defaults to true).",
          "type": "boolean",
          "default": true
        },
        "schema": {
          "description": "Type information for values carried by the port.",
          "$ref": "#/$defs/Schema"
        },
        "shape": {
          "description": "Structural shape of the port.",
          "$ref": "#/$defs/Shape"
        },
        "units": {
          "description": "Optional units metadata.",
          "anyOf": [
            {
              "$ref": "#/$defs/Units"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "dir",
        "shape",
        "location",
        "schema"
      ]
    },
    "Profile": {
      "description": "Conformance profile advertised by a manifest.\n\nProfiles gate optional/forward-looking features so runtimes can safely reject\nmanifests that use selectors they don't support.",
      "oneOf": [
        {
          "description": "Core profile: A1, named range, and layout selectors only.",
          "type": "string",
          "const": "core-v0"
        },
        {
          "description": "Full profile (reserved): enables structured refs and workbook table selectors.",
          "type": "string",
          "const": "full-v0"
        }
      ]
    },
    "RangeKind": {
      "type": "string",
      "enum": [
        "range"
      ]
    },
    "RangeSchema": {
      "type": "object",
      "properties": {
        "cell_type": {
          "description": "Value type enforced for each cell.",
          "$ref": "#/$defs/ValueType"
        },
        "format": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "kind": {
          "$ref": "#/$defs/RangeKind",
          "default": "range"
        }
      },
      "additionalProperties": false,
      "required": [
        "cell_type"
      ]
    },
    "RecordField": {
      "type": "object",
      "properties": {
        "constraints": {
          "anyOf": [
            {
              "$ref": "#/$defs/Constraints"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "location": {
          "description": "Selector resolving to the field cell.",
          "$ref": "#/$defs/FieldSelector"
        },
        "type": {
          "description": "Scalar value type for the field.",
          "$ref": "#/$defs/ValueType"
        },
        "units": {
          "anyOf": [
            {
              "$ref": "#/$defs/Units"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "location"
      ]
    },
    "RecordKind": {
      "type": "string",
      "enum": [
        "record"
      ]
    },
    "RecordSchema": {
      "type": "object",
      "properties": {
        "fields": {
          "description": "Mapping of field names to scalar schema definitions.",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/RecordField"
          }
        },
        "kind": {
          "$ref": "#/$defs/RecordKind",
          "default": "record"
        }
      },
      "additionalProperties": false,
      "required": [
        "fields"
      ]
    },
    "ScalarSchema": {
      "type": "object",
      "properties": {
        "format": {
          "description": "Optional format hint.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "type": {
          "description": "Scalar value type.",
          "$ref": "#/$defs/ValueType"
        }
      },
      "additionalProperties": false,
      "required": [
        "type"
      ]
    },
    "Schema": {
      "description": "Schema union.",
      "anyOf": [
        {
          "$ref": "#/$defs/ScalarSchema"
        },
        {
          "$ref": "#/$defs/RecordSchema"
        },
        {
          "$ref": "#/$defs/RangeSchema"
        },
        {
          "$ref": "#/$defs/TableSchema"
        }
      ]
    },
    "Selector": {
      "description": "Selector union.",
      "anyOf": [
        {
          "$ref": "#/$defs/SelectorA1"
        },
        {
          "$ref": "#/$defs/SelectorName"
        },
        {
          "$ref": "#/$defs/SelectorTable"
        },
        {
          "$ref": "#/$defs/SelectorStructRef"
        },
        {
          "$ref": "#/$defs/SelectorLayout"
        }
      ]
    },
    "SelectorA1": {
      "type": "object",
      "properties": {
        "a1": {
          "description": "Absolute A1-style reference to a cell or range (e.g., `Sheet1!A1:C10`).",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "a1"
      ]
    },
    "SelectorLayout": {
      "type": "object",
      "properties": {
        "layout": {
          "description": "Declarative layout descriptor for header-based regions.",
          "$ref": "#/$defs/LayoutDescriptor"
        }
      },
      "additionalProperties": false,
      "required": [
        "layout"
      ]
    },
    "SelectorName": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Workbook-defined name (global or sheet scoped).",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name"
      ]
    },
    "SelectorStructRef": {
      "type": "object",
      "properties": {
        "struct_ref": {
          "description": "Excel structured reference syntax (e.g., `TblOrders[Qty]`). Reserved in `core-v0`; requires `full-v0` profile.",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "struct_ref"
      ]
    },
    "SelectorTable": {
      "type": "object",
      "properties": {
        "table": {
          "description": "Workbook table selector (by Excel table name). Reserved in `core-v0`; requires `full-v0` profile.",
          "$ref": "#/$defs/TableSelector"
        }
      },
      "additionalProperties": false,
      "required": [
        "table"
      ]
    },
    "Shape": {
      "description": "Port shape.",
      "oneOf": [
        {
          "description": "Scalar value (single cell).",
          "type": "string",
          "const": "scalar"
        },
        {
          "description": "Record of named scalar fields.",
          "type": "string",
          "const": "record"
        },
        {
          "description": "Rectangular range with uniform type.",
          "type": "string",
          "const": "range"
        },
        {
          "description": "Table with named columns.",
          "type": "string",
          "const": "table"
        }
      ]
    },
    "SpecVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:-[0-9A-Za-z-.]+)?(?:\\+[0-9A-Za-z-.]+)?$"
    },
    "TableArea": {
      "oneOf": [
        {
          "description": "Header row of the table.",
          "type": "string",
          "const": "header"
        },
        {
          "description": "Table body rows (default).",
          "type": "string",
          "const": "body"
        },
        {
          "description": "Totals row.",
          "type": "string",
          "const": "totals"
        }
      ]
    },
    "TableColumn": {
      "type": "object",
      "properties": {
        "col": {
          "description": "Optional column letter hint when using layout selectors.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "format": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "name": {
          "description": "Column name exposed to clients.",
          "type": "string"
        },
        "type": {
          "description": "Scalar type for column cells.",
          "$ref": "#/$defs/ValueType"
        },
        "units": {
          "anyOf": [
            {
              "$ref": "#/$defs/Units"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "type"
      ]
    },
    "TableKind": {
      "type": "string",
      "enum": [
        "table"
      ]
    },
    "TableSchema": {
      "type": "object",
      "properties": {
        "columns": {
          "description": "Column definitions.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/TableColumn"
          }
        },
        "keys": {
          "description": "Optional list of column names forming a logical primary key.",
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "items": {
            "type": "string"
          }
        },
        "kind": {
          "$ref": "#/$defs/TableKind",
          "default": "table"
        }
      },
      "additionalProperties": false,
      "required": [
        "columns"
      ]
    },
    "TableSelector": {
      "description": "Selector for an Excel table. Reserved in `core-v0`; requires `full-v0` profile.",
      "type": "object",
      "properties": {
        "area": {
          "description": "Optional target area within the table.",
          "anyOf": [
            {
              "$ref": "#/$defs/TableArea"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "name": {
          "description": "Excel table name.",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name"
      ]
    },
    "Units": {
      "description": "Units metadata (extensible).",
      "type": "object",
      "properties": {
        "currency": {
          "description": "Currency code (ISO 4217).",
          "type": [
            "string",
            "null"
          ],
          "default": null
        }
      },
      "additionalProperties": false
    },
    "ValueType": {
      "description": "Scalar value types.",
      "type": "string",
      "enum": [
        "string",
        "number",
        "integer",
        "boolean",
        "date",
        "datetime"
      ]
    },
    "WorkbookMeta": {
      "description": "Optional workbook descriptors. These fields are advisory hints for runtimes and may be ignored unless a runtime explicitly documents support.",
      "type": "object",
      "properties": {
        "date_system": {
          "description": "Expected Excel date system (1900 or 1904).",
          "type": [
            "integer",
            "null"
          ],
          "format": "int32",
          "default": null
        },
        "locale": {
          "description": "Locale hint for parsing numbers/dates.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "timezone": {
          "description": "Time zone identifier for datetime interpretation.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "uri": {
          "description": "Optional workbook URI (sharepoint://, file://, etc.).",
          "type": [
            "string",
            "null"
          ],
          "default": null
        }
      },
      "additionalProperties": false
    }
  }
}
