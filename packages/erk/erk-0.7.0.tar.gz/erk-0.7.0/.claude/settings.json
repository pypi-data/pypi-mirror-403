{
  "permissions": {
    "allow": ["Bash(erk:*)", "Read(/tmp/*)", "Write(/tmp/*)"],
    "deny": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=user-prompt-hook erk exec user-prompt-hook",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/fake-driven-testing-reminder.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=exit-plan-mode-hook erk exec exit-plan-mode-hook",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "[[ \"${file_path}\" == *.py ]] && uv run ruff format \"${file_path}\" || true"
          }
        ]
      }
    ]
  }
}
