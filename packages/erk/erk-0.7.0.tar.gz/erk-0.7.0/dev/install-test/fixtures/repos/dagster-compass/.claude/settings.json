{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=user-prompt-hook erk exec user-prompt-hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=exit-plan-mode-hook erk exec exit-plan-mode-hook"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": ["Bash(erk:*)"]
  }
}
