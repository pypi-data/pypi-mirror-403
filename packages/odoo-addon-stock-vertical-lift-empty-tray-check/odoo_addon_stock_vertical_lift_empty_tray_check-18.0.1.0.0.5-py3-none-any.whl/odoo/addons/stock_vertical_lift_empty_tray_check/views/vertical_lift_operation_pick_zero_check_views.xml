<odoo>
    <record id="vertical_lift_operation_pick_zero_check_view_form" model="ir.ui.view">
        <field name="name">vertical.lift.operation.pick.zero.check.view.form</field>
        <field name="model">vertical.lift.operation.pick.zero.check</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-center fs-1">Is the tray empty?</p>
                <footer>
                    <div class="o_shuttle_empty_tray_check_button">
                        <button
                            name="button_confirm_empty"
                            string="Tray Empty"
                            type="object"
                            class="btn-success fs-1"
                        />
                    </div>
                    <div
                        class="o_shuttle_empty_tray_check_button o_shuttle_empty_tray_check_button_right"
                    >
                        <button
                            name="button_confirm_not_empty"
                            string="Tray Not Empty"
                            type="object"
                            class="btn-danger fs-1"
                        />
                    </div>
                </footer>
            </form>
        </field>
    </record>
</odoo>
