
x-app: &app
  image: ${AEGIS_STACK_TAG:-aegis-stack:latest}
  build:
    context: .
    args:
      - AEGIS_STACK_VERSION=${AEGIS_STACK_VERSION:-dev}
      - PORT=${PORT:-8000}
  env_file:
    - ${AEGIS_STACK_ENV_FILE:-.env}
  volumes:
    - .:/code
  environment:
    # Docker container marker for entrypoint script
    - DOCKER_CONTAINER=1
    - PORT=${PORT:-8000}
  labels:
    logging: "aegis-stack"

services:
  # DEVELOPMENT PROFILE

  webserver:
    <<: *app
    command:
      - webserver
    ports:
      - "${PORT:-8000}:${PORT:-8000}"
{%- if include_redis or database_engine == "postgres" or ollama_mode == "docker" %}
    depends_on:
{%- if include_redis %}
      redis:
        condition: service_healthy
{%- endif %}
{%- if database_engine == "postgres" %}
      postgres:
        condition: service_healthy
{%- endif %}
{%- if ollama_mode == "docker" %}
      ollama:
        condition: service_healthy
{%- endif %}
{%- endif %}
{%- if include_redis %}
    environment:
      # Docker container marker and Redis connection for health checks
      - DOCKER_CONTAINER=1
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:${PORT:-8000}/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'
    profiles:
      - dev


{%- if include_scheduler %}
  # Scheduler service (runs scheduler tasks independently)
  scheduler:
    <<: *app
    command:
      - scheduler
{%- if include_redis or scheduler_backend == 'postgres' %}
    depends_on:
{%- if include_redis %}
      redis:
        condition: service_healthy
{%- endif %}
{%- if scheduler_backend == 'postgres' %}
      webserver:
        condition: service_healthy
{%- endif %}
{%- endif %}
{%- if include_redis %}
    environment:
      # Docker container marker and Redis connection for health checks
      - DOCKER_CONTAINER=1
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- endif %}
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}

{%- if include_worker %}
  # Load Test Worker (high-performance load testing tasks)
  worker-load-test:
    <<: *app
    command:
      - worker
      - load_test
    depends_on:
      redis:
        condition: service_healthy
    restart: unless-stopped
    tty: true
    environment:
      # Docker container marker for entrypoint script
      - DOCKER_CONTAINER=1
      # Load test worker configuration
      - WORKER_QUEUE_TYPE=load_test
{%- if worker_backend == "taskiq" %}
      - WORKER_PROCESSES=${LOAD_TEST_WORKER_PROCESSES:-4}
{%- endif %}
      - WORKER_TIMEOUT_SECONDS=${LOAD_TEST_WORKER_TIMEOUT:-60}
      - WORKER_MAX_TRIES=${LOAD_TEST_WORKER_MAX_TRIES:-1}
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- if worker_backend == "taskiq" %}
      # Docker file watching fix - force polling for volume mounts
      - WATCHFILES_FORCE_POLLING=true
      - WATCHFILES_POLL_DELAY_MS=800
{%- endif %}
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    profiles:
      - dev
      - prod


  # System Worker (maintenance and administrative tasks)
  worker-system:
    <<: *app
    command:
      - worker
      - system
    depends_on:
      redis:
        condition: service_healthy
    restart: unless-stopped
    tty: true
    environment:
      # Docker container marker for entrypoint script
      - DOCKER_CONTAINER=1
      # System worker configuration (high reliability)
      - WORKER_QUEUE_TYPE=system
{%- if worker_backend == "taskiq" %}
      - WORKER_PROCESSES=${SYSTEM_WORKER_PROCESSES:-2}
{%- endif %}
      - WORKER_TIMEOUT_SECONDS=${SYSTEM_WORKER_TIMEOUT:-1800}
      - WORKER_MAX_TRIES=${SYSTEM_WORKER_MAX_TRIES:-5}
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- if worker_backend == "taskiq" %}
      # Docker file watching fix - force polling for volume mounts
      - WATCHFILES_FORCE_POLLING=true
      - WATCHFILES_POLL_DELAY_MS=800
{%- endif %}
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}


{%- if include_redis %}
  # REDIS SERVICE

  redis:
    image: redis:7-alpine
    hostname: redis
    ports:
      - "6379:6379"
    command: redis-server --maxmemory 256mb --maxmemory-policy allkeys-lru
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.25'
        reservations:
          memory: 256M
          cpus: '0.1'
    profiles:
      - dev
{%- endif %}

{%- if database_engine == "postgres" %}
  # POSTGRESQL SERVICE

  postgres:
    image: postgres:16-alpine
    hostname: postgres
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: {{ project_slug }}
    volumes:
      - postgres-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'
    profiles:
      - dev
{%- endif %}

{%- if ollama_mode == "docker" %}
  # OLLAMA SERVICE (Local LLM Inference)

  ollama:
    image: ollama/ollama:latest
    hostname: ollama
    ports:
      - "11434:11434"
    volumes:
      - ollama-data:/root/.ollama
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:11434/api/tags"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 8G
          cpus: '4.0'
        reservations:
          memory: 4G
          cpus: '2.0'
    profiles:
      - dev
      - prod
{%- endif %}

  # TEST PROFILE

  test_runner:
    <<: *app
    command:
      - test
    env_file:
      - ${AEGIS_STACK_ENV_FILE:-.env}
    profiles:
      - test

volumes:
  aegis-data:
{%- if database_engine == "postgres" %}
  postgres-data:
{%- endif %}
{%- if ollama_mode == "docker" %}
  ollama-data:
{%- endif %}
