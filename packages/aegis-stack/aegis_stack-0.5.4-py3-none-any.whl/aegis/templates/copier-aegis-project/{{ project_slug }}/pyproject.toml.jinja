[project]
name = "{{ project_slug }}"
version = "{{ version }}"
description = "{{ project_description }}"
readme = "README.md"
{% if ai_rag %}requires-python = ">=3.11,<3.14"  # chromadbâ†’onnxruntime lacks Python 3.14 wheels
{% else %}requires-python = ">={{ python_version }},<3.15"
{% endif %}
authors = [
    {name = "{{ author_name }}", email = "{{ author_email }}"}
]

dependencies = [
    "fastapi==0.116.1",
    "flet[all]==0.28.3",
    "uvicorn==0.35.0",
    "structlog==25.4.0",
    "pydantic-settings>=2.12.0",
    "typer==0.16.0",
    # Pin click to avoid yanked versions (typer dependency)
    "click==8.2.1",
    # Rich CLI formatting
    "rich==14.1.0",
    # Interactive prompts with status line support
    "prompt_toolkit>=3.0.0",
    # HTTP client for CLI API calls
    "httpx==0.28.1",
    # Security fix for GHSA-38jv-5279-wg99
    "urllib3>=2.6.3",
    # System monitoring
    "psutil==7.0.0",
{%- if include_scheduler %}
    "apscheduler==3.10.4",
{%- endif %}
{%- if include_redis %}
    "redis==5.0.8",
{%- endif %}
{%- if include_worker %}
{%- if worker_backend == "taskiq" %}
    "taskiq>=0.11.11",
    "taskiq-redis>=1.0.2",
{%- else %}
    "arq==0.25.0",
{%- endif %}
{%- endif %}
{%- if include_database %}
    "sqlmodel>=0.0.14",
    "sqlalchemy>=2.0.0",
{%- if database_engine == "postgres" %}
    "asyncpg>=0.29.0",
    "psycopg2-binary>=2.9.9",
{%- else %}
    "aiosqlite>=0.19.0",
{%- endif %}
    "greenlet>=1.1.0",
{%- endif %}
{%- if include_cache %}
    "redis[hiredis]==5.0.8",
{%- endif %}
{%- if include_auth %}
    "python-jose[cryptography]==3.3.0",
    "bcrypt>=4.0.0",
    "python-multipart==0.0.9",
{%- endif %}
{%- if include_auth or (include_ai and ai_backend in ["sqlite", "postgres"]) %}
    "alembic==1.16.5",
{%- endif %}
{%- if include_ai %}
{%- if ai_framework == "pydantic-ai" %}
{# Map provider names to pydantic-ai-slim extras (OpenAI-compatible providers -> openai) #}
{%- set pydantic_extras = ai_providers | replace("public", "openai") | replace("openrouter", "openai") | replace("ollama", "openai") %}
    "pydantic-ai-slim[{{ pydantic_extras }}]>=1.0.10",
    "httpx>=0.27.0",
{%- else %}
    # LangChain framework dependencies
    "langchain-core>=1.1.0",
{%- if "openai" in ai_providers or "public" in ai_providers %}
    "langchain-openai>=1.1.0",
{%- endif %}
{%- if "anthropic" in ai_providers %}
    "langchain-anthropic>=1.2.0",
{%- endif %}
{%- if "google" in ai_providers %}
    "langchain-google-genai>=4.0.0",
{%- endif %}
{%- if "groq" in ai_providers %}
    "langchain-groq>=1.1.0",
{%- endif %}
{%- if "mistral" in ai_providers %}
    "langchain-mistralai>=1.1.0",
{%- endif %}
{%- if "cohere" in ai_providers %}
    "langchain-cohere>=0.5.0",
{%- endif %}
{%- endif %}
    "marko==2.1.3",
{%- endif %}
{%- if include_comms %}
    "resend>=2.4.0",
    "twilio>=9.3.7",
{%- endif %}
{%- if include_auth or include_comms %}
    "email-validator==2.2.0",  # Required for EmailStr in auth/comms models
{%- endif %}
{%- if ai_rag %}
    "chromadb>=0.4.22,<1.0.0",  # Vector store - pin to 0.x for stability
    "sentence-transformers>=3.0.0",  # Local embeddings
{%- endif %}
]

[project.scripts]
{{ project_slug }} = "app.cli.main:main"

[project.optional-dependencies]
dev = [
    "pytest==8.4.1",
    "pytest-asyncio==1.1.0",
    "ruff==0.12.7",
    "ty",
    "types-psutil==7.0.0.20250801",
    "pre-commit==4.2.0",
    "pip-audit==2.9.0",
{%- if include_worker %}
    # Development auto-reload for workers
    "watchdog==4.0.2",
{%- endif %}
]
docs = [
    "mkdocs==1.6.1",
    "mkdocs-material==9.6.16",
    "mkdocstrings[python]==0.30.0",
    "mkdocs-gen-files==0.5.0",
    "pymdown-extensions==10.16.1",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["app"]

[tool.ruff]
line-length = 88
target-version = "py{{ python_version | string | replace('.', '') }}"

[tool.ruff.lint]
select = ["E", "F", "I", "N", "W", "UP"]  # Added UP for pyupgrade (modern Python syntax)
ignore = []
fixable = ["ALL"]
unfixable = []

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"

[tool.ruff.lint.isort]
force-single-line = false
force-sort-within-sections = true
known-first-party = ["app"]

[tool.ty.rules]
# Configure ty to ignore only genuine false positives or unavoidable issues
# Real type issues should be fixed, not ignored
unresolved-import = "ignore"              # Missing third-party type stubs (unavoidable)
unresolved-attribute = "ignore"           # Some dynamic attribute access in Flet is unavoidable
invalid-argument-type = "ignore"          # Flet dynamic attributes and colors
non-subscriptable = "ignore"             # Flet page.controls access patterns
unsupported-operator = "ignore"          # Flet value comparisons with None
possibly-missing-attribute = "ignore"    # Flet dynamic component properties
call-non-callable = "ignore"             # Dynamic middleware registration patterns
invalid-return-type = "ignore"           # Flet component return type flexibility


[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]

[dependency-groups]
dev = [
    "httpx>=0.28.1",
]