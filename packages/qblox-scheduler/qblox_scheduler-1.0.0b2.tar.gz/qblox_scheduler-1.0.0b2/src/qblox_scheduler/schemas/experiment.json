{
    "$id": "qblox://experiment",
    "type": "object",
    "description": "JSON schema for a qblox experiment.",
    "additionalProperties": true,
    "required": [
        "name",
        "steps"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the experiment."
        },
        "steps": {
            "type": "array",
            "description": "A list of steps contained in this experiment.",
            "items": {
                "type": "object"
            }
        }
    }
}