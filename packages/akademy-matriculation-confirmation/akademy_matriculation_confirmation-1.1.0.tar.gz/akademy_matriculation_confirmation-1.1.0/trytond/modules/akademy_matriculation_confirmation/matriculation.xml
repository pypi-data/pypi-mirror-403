<tryton>
	<data>
        <!-- start matriculation -->
        <record model="ir.ui.view" id="act_matriculation_wizard_from">
            <field name="model">akademy_matriculation.wizmatriculation.create.start</field>                    
            <field name="inherit" ref="akademy_matriculation.act_matriculation_wizard_from"/>
            <field name="name">matriculation_wizcreate_form</field>            
        </record>

        <!-- start change matriculation -->
        <record model="ir.action.wizard" id="act_changematriculation_wizard">
            <field name="name">Mudança de matrícula</field>
            <field name="wiz_name">akademy_matriculation_confirmation.wizchangematriculation.create</field>
        </record>
        <record model="ir.ui.view" id="act_changematriculation_wizard_from">
            <field name="model">akademy_matriculation_confirmation.wizchangematriculation.create.start</field>
            <field name="type">form</field>
            <field name="name">changematriculation_wizcreate_form</field>            
        </record>
        <menuitem action="act_changematriculation_wizard" parent="akademy_matriculation.akademy_registrations" id="akademy_changematriculation" 
            sequence="40"/>
	</data>
</tryton>
