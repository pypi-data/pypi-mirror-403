{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowSNSPublish",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "SQS:SendMessage",
      "Resource": "arn:aws:sqs:us-east-1:123456789012:sns-subscriber-queue",
      "Condition": {
        "StringEquals": {
          "aws:SourceArn": "arn:aws:sns:us-east-1:123456789012:my-topic",
          "aws:SourceAccount": "123456789012"
        }
      }
    }
  ]
}
