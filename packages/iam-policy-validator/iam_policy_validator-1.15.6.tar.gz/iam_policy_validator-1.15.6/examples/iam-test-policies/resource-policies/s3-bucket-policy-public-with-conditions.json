{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadAccessWithConditions",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::my-public-bucket/*",
      "Condition": {
        "StringLike": {
          "aws:SourceArn": "arn:aws:cloudfront::123456789012:distribution/*"
        },
        "StringEquals": {
          "aws:SourceAccount": "123456789012"
        }
      }
    }
  ]
}
