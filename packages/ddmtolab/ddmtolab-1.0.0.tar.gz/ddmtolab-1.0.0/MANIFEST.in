# Include documentation and metadata
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# Include source directory
recursive-include src *.py

# Include docs (images and documentation files)
recursive-include docs *.rst *.md *.py *.png *.gif *.jpg *.svg

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude *.swp
global-exclude *.swo

# Exclude build and test artifacts
prune build
prune dist
prune .pytest_cache
prune .tox
prune *.egg-info

# Exclude data directories (if you have them)
prune Data
