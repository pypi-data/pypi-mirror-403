# Claude Agent SDK Configuration
# Copy this file to .env and fill in your API keys

# Required for production mode
# Get your key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Research Agent Configuration
# Options: mock (default, no API key needed) | production (uses real Claude SDK)
RESEARCH_MODE=mock

# Chaos Testing Configuration
# Enable/disable chaos injection
CHAOS_ENABLED=false

# Chaos level: 0.0 (no chaos) to 2.0 (extreme chaos)
# Typical values:
#   0.0  = Baseline (no failures)
#   0.25 = Light chaos (occasional failures)
#   0.5  = Medium chaos (common failures)
#   0.75 = Heavy chaos (frequent failures)
#   1.0+ = Severe chaos (most operations fail)
CHAOS_LEVEL=0.5

# Output Configuration
# Directory where research reports will be saved
REPORT_OUTPUT_DIR=./reports

# Logging Configuration
# Options: true | false (default)
VERBOSE=true

# Optional: Google Gemini API (for future Gemini integration)
# GOOGLE_API_KEY=your-gemini-api-key-here
# GEMINI_MODEL=gemini-3-flash-preview

# Optional: Tavily Web Search (for advanced search mode)
# TAVILY_API_KEY=your-tavily-api-key-here
