include pyproject.toml
include setup.py
include README.md

# Include Cython source and type stubs
recursive-include bindings *.pyx *.pxd *.pxi *.pyi
include bindings/py.typed

# Include vendored C source and header files (if copied locally)
recursive-include vendor *.c *.h
recursive-include src *.c *.h
recursive-include cli *.c *.h

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude *.o
global-exclude .git*
