<odoo>
  <record id="view_energy_communities_company_form" model="ir.ui.view">
    <field name="name">res.company.form.energy_communities.inherit</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="energy_communities.view_company_form_ce_inherited" />
    <field name="arch" type="xml">
      <header position="inside">
          <button
          name="action_open_volutary_share_interest_return_wizard"
          type="object"
          string="Voluntary share interest return"
          groups="energy_communities.group_platform_manager"
          attrs="{'invisible':[('hierarchy_level', '!=','community')]}"
        />
      </header>
    </field>
  </record>

  <record model="ir.ui.view" id="view_company_form">
    <field name="name">res.company.form.easymy.coop</field>
    <field name="inherit_id" ref="base.view_company_form" />
    <field name="model">res.company</field>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Cooperator shares">
          <group string="Global cooperative settings">
            <field name="subscription_journal_id" readonly="0" />
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
