{
    "_schema_version": "v45.0",
    "_type": "policy",
    "_canon_refs": [
        "L1_THEORY/canon/01_floors/010_CONSTITUTIONAL_FLOORS_F1F9_v45.md#F1"
    ],
    "_source_evolution": "v45xx (TCHA - Time-Critical Harm Awareness)",
    "_description": "Time-Critical Harm Awareness policy. Treats delay as harm in emergency contexts. Extends F1 (Amanah/Trust) to include time-loss as violation.",
    "time_critical": {
        "enabled": true,
        "enable_env_var": "ARIFOS_TCHA_ENABLED",
        "detection_patterns": {
            "english": [
                "urgent",
                "emergency",
                "immediately",
                "life-threatening",
                "dying",
                "choking",
                "bleeding",
                "heart attack",
                "stroke",
                "overdose",
                "911",
                "call ambulance",
                "help me now",
                "can't breathe",
                "unconscious",
                "severe pain",
                "poison",
                "allergic reaction"
            ],
            "malay": [
                "kecemasan",
                "segera",
                "sakit teruk",
                "tak boleh bernafas",
                "pengsan",
                "lemas",
                "keracunan",
                "serangan jantung",
                "strok",
                "pendarahan teruk",
                "tolong saya"
            ]
        },
        "high_stakes_domains": [
            "medical_emergency",
            "physical_danger",
            "suicide_risk",
            "child_safety"
        ]
    },
    "thresholds": {
        "max_delay_ms": 3000,
        "delay_harm_threshold_ms": 5000,
        "bypass_sabar_holds": true,
        "bypass_888_holds": false,
        "allow_partial_safe_answer": true
    },
    "verdict_overrides": {
        "comment": "When is_time_critical=true, modify default behavior",
        "convert_void_to_partial_for_safe_guidance": true,
        "skip_lengthy_deliberation": true,
        "require_immediate_verdict": true,
        "minimum_safe_response": "If this is a life-threatening emergency, please call emergency services (911/999) immediately."
    },
    "telemetry": {
        "log_time_critical_detected": true,
        "log_delay_harm_flagged": true,
        "log_override_actions": true,
        "field_name_time_critical": "is_time_critical",
        "field_name_delay_harm": "delay_harm_flagged"
    },
    "floor_extensions": {
        "F1_amanah": {
            "extension": "time_loss_as_harm",
            "description": "Preventable delay in life-threatening emergencies is treated as F1 violation (breach of trust).",
            "enforcement": "If is_time_critical AND processing_ms > delay_harm_threshold_ms, flag as potential F1 violation"
        }
    },
    "_metadata": {
        "created": "2026-01-03",
        "author": "arifOS/Antigravity",
        "status": "PHOENIX",
        "cooling_required_hours": 72,
        "notes": "v45xx TCHA policy - extends F1 to treat delay as harm in emergencies. Phoenix-72 cooling required before SEAL to production."
    }
}
