{
    "mcpServers": {
        "arifos-trinity": {
            "command": "python",
            "args": ["-m", "arifos.mcp", "trinity"],
            "env": {
                "PYTHONPATH": "${ARIFOS_PATH}",
                "ARIFOS_CONSTITUTIONAL_MODE": "AAA"
            },
            "metadata": {
                "name": "arifOS Trinity for Gemini",
                "version": "50.5.24",
                "description": "5-Tool Constitutional Framework",
                "tools_count": 5,
                "transport": "stdio"
            }
        }
    },
    "geminiSettings": {
        "enableMcpTools": true,
        "constitutionalMode": "AAA"
    },
    "trinityTools": {
        "tools": ["init_000", "agi_genius", "asi_act", "apex_judge", "vault_999"],
        "mnemonic": "Init the Genius, Act with Heart, Judge at Apex, seal in Vault."
    }
}
