# ---- Core docs ----
include README.md

# ---- Python package files ----
recursive-include termflow *.py *.tcss *.toml *.json *.md

# ---- Explicit exclusions (dev / platform junk) ----
exclude .replit
exclude replit.md
exclude todos.json
exclude config.json
exclude zipFile.zip
exclude HELP.md
exclude INFO.md
exclude styles.tcss

# ---- Hard ignores ----
recursive-exclude WebFolder *
recursive-exclude attached_assets *
recursive-exclude termflow.egg-info *
recursive-exclude .pythonlibs *
recursive-exclude .upm *
recursive-exclude .config *
recursive-exclude __pycache__ *
recursive-exclude *.pyc
