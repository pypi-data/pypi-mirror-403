{
  "mcpServers": {
    "zeughaus": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-v", "/var/run/docker.sock:/var/run/docker.sock",
        "-v", "/home/gtarkin/zeughaus_mcp:/workspace",
        "-e", "NIXERY_REGISTRY_URL=nixery.dev",
        "-e", "HOST_WORKSPACE_ROOT=/workspace",
        "ghcr.io/gtarkin/zeughaus_mcp:latest"
      ]
    }
  }
}
