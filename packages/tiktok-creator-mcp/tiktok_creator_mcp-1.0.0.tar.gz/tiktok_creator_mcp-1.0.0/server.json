{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.wmarceau/tiktok-creator",
  "description": "TikTok automation: post videos, get analytics, manage comments",
  "repository": {
    "url": "https://github.com/MarceauSolutions/dev-sandbox",
    "source": "github",
    "subfolder": "projects/tiktok-creator"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "tiktok-creator-mcp",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "runtime": "python",
      "environmentVariables": [
        {
          "name": "TIKTOK_CLIENT_KEY",
          "description": "TikTok app client key"
        },
        {
          "name": "TIKTOK_CLIENT_SECRET",
          "description": "TikTok app client secret"
        },
        {
          "name": "TIKTOK_ACCESS_TOKEN",
          "description": "TikTok user access token"
        },
        {
          "name": "TIKTOK_REFRESH_TOKEN",
          "description": "TikTok refresh token for token renewal"
        }
      ]
    }
  ]
}
