# MCP Server Development Dockerfile
# Optimized for local development with hot reload

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir watchfiles

# Copy Prisma schema and generate client
COPY prisma ./prisma
RUN prisma generate

# Copy source code (will be overwritten by volume mount in dev)
COPY src ./src

# Expose port
EXPOSE 8000

# Environment
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Run with auto-reload for development
CMD ["uvicorn", "src.server:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "src"]
