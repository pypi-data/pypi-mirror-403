# Claudette Configuration
# Copy this file to config.yaml and customize for your setup

whisper:
  # Mode: "local" (faster-whisper) or "remote" (API server)
  mode: "local"

  # Local Whisper settings (when mode: "local")
  # Models: tiny, base, small, medium, large-v2, large-v3
  # Smaller = faster, larger = more accurate
  model: "base"

  # Device: "auto", "cuda", or "cpu"
  # auto will use CUDA if available
  device: "auto"

  # Compute type: float16, int8_float16, int8 (for faster inference)
  compute_type: "float16"

  # Remote Whisper settings (when mode: "remote")
  # URL of your Whisper ASR server
  # Popular options:
  #   - faster-whisper-server: https://github.com/fedirz/faster-whisper-server
  #   - whisper.cpp server: https://github.com/ggerganov/whisper.cpp
  url: "http://localhost:9300/asr"

  # Language for transcription
  language: "en"

audio:
  # Audio capture settings (optimized for Whisper)
  sample_rate: 16000
  channels: 1

audio_processing:
  # Audio enhancement for better recognition
  noise_reduce: true               # Enable spectral noise reduction
  high_pass_cutoff: 80.0           # High-pass filter cutoff (Hz), 0 to disable
  normalize: true                  # Normalize audio levels

# Wake word configuration
wake_word:
  word: "claudette"                # Primary wake word
  # Add custom variants for your accent/pronunciation:
  # variants:
  #   - "cloud it"
  #   - "clod it"
  # Claudette automatically handles many common variations

vad:
  # Voice Activity Detection settings
  threshold: 0.5           # Speech probability threshold (0.0-1.0)
  min_speech_ms: 250       # Minimum speech duration to trigger (ms)
  silence_duration: 1.5    # Seconds of silence to end recording
  device: "auto"           # Device: "auto", "cuda", or "cpu"

tts:
  # Text-to-Speech settings using Edge TTS
  # Voice options (say "list voices" to hear all):
  #   British English:
  #   - en-GB-SoniaNeural (default) - Professional, clear
  #   - en-GB-LibbyNeural - Warm, friendly
  #   - en-GB-MaisieNeural - Young, energetic
  #   - en-GB-RyanNeural - Male British voice
  #   American English:
  #   - en-US-AriaNeural - Clear, professional
  #   - en-US-JennyNeural - Warm, conversational
  #   Australian English:
  #   - en-AU-NatashaNeural - Australian accent
  voice: "en-GB-SoniaNeural"
  rate: "+0%"              # Speech rate: -50% to +100%
  pitch: "+0Hz"            # Pitch adjustment: -50Hz to +50Hz

memory:
  # Conversation memory settings
  enabled: true                    # Enable conversation memory
  max_exchanges: 20                # Maximum exchanges to remember
  # file: "~/.claudette_memory.json"  # Custom memory file location

skills:
  # Custom skills/plugins directory
  # directory: "./skills"

sounds:
  # Sound effects for state changes
  enabled: true                    # Enable audio feedback sounds
  volume: 0.3                      # Volume level (0.0-1.0)

hotkey:
  # Keyboard shortcut to activate Claudette
  enabled: true                    # Enable hotkey activation
  # key: "<ctrl>+<shift>+c"        # Linux/Windows default
  # key: "<cmd>+<shift>+c"         # macOS default
  # Other examples: "<f12>", "<ctrl>+<alt>+c"

tray:
  # System tray icon
  enabled: true                    # Show icon in system tray
  waveform: false                  # Show floating waveform window

notifications:
  # Desktop notifications
  enabled: false                   # Show desktop notifications (off by default)

personality:
  # AI personality preset
  # Options: claudette (default), professional, friendly, butler, pirate
  preset: "claudette"
  # Or provide a custom prompt:
  # custom_prompt: "You are a helpful assistant..."

offline:
  # Offline fallback mode
  enabled: true                    # Enable offline detection and fallback responses

web:
  # Web dashboard for managing Claudette
  # Requires: pip install claudette-voice[web]
  enabled: false                   # Enable web dashboard (off by default)
  host: "127.0.0.1"               # Host to bind to (localhost only for security)
  port: 8420                       # Port to listen on
  # Access at: http://localhost:8420
