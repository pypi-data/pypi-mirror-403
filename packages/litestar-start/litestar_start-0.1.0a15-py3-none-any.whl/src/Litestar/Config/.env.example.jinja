# Application
APP_NAME="{{ project_name }}"
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

{% if has_database %}
# Database
{% if database.value == "PostgreSQL" %}
DATABASE_URL=postgresql+psycopg://myuser:mypassword@localhost:5432/mydb
{% elif database.value == "SQLite" %}
DATABASE_URL=sqlite+aiosqlite:///./app.db
{% elif database.value == "MySQL" %}
DATABASE_URL=mysql+asyncmy://myuser:mypassword@localhost:3306/mydb
{% endif %}
{% endif %}
