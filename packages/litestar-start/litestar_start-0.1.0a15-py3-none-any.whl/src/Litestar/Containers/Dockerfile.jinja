ARG PYTHON_VERSION=3.12

# ------------------------------------------------------------------------------
# Base stage
# ------------------------------------------------------------------------------
FROM python:${PYTHON_VERSION}-slim-bookworm AS base

RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y --no-install-recommends tini \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir -p /workspace/app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/

WORKDIR /workspace/app

# ------------------------------------------------------------------------------
# Builder stage
# ------------------------------------------------------------------------------
FROM base AS builder

COPY pyproject.toml ./
RUN uv sync --no-dev --frozen --no-install-project

COPY . .

# ------------------------------------------------------------------------------
# Runtime stage
# ------------------------------------------------------------------------------
FROM base AS runtime

ENV PATH="/workspace/app/.venv/bin:$PATH" \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1 \
    PYTHONHASHSEED=random

COPY --from=builder /workspace/app/.venv ./.venv
COPY --from=builder /workspace/app/app ./app
{% if advanced_alchemy %}
COPY --from=builder /workspace/app/models ./models
{% endif %}

# Create non-root user
RUN addgroup --system --gid 65532 appgroup \
    && adduser --no-create-home --system --uid 65532 appuser \
    && chown -R appuser:appgroup /workspace

USER appuser
EXPOSE 8000

ENTRYPOINT ["tini", "--"]
CMD ["litestar", "run", "--host", "0.0.0.0", "--port", "8000"]
