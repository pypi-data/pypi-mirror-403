include LICENSE
include README.md
include CONTRIBUTING.md
include pyproject.toml

recursive-include tests *.py
recursive-include docs *.py *.rst *.md
recursive-include examples *.py *.md
recursive-include scripts *.py *.sh

prune .github
prune docs/_build
prune docs/_static
prune tests/__pycache__
prune **/__pycache__
prune benchmarks

global-exclude *.pyc *.pyo *.pyd .DS_Store
global-exclude *.swp *.swo
global-exclude *~
global-exclude .git*
