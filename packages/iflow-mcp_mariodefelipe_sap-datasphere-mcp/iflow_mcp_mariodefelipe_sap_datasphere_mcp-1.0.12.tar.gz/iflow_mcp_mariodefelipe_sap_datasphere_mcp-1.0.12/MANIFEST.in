# MANIFEST.in - Package Data Files for PyPI Distribution

# Include documentation
include README.md
include LICENSE
include GETTING_STARTED_GUIDE.md
include TOOLS_CATALOG.md
include TROUBLESHOOTING.md
include API_REFERENCE.md
include DEPLOYMENT.md
include POLISH_COMPLETION_SUMMARY.md

# Include configuration examples
include .env.example
include requirements.txt

# Include Docker files (for reference)
include Dockerfile
include docker-compose.yml
include .dockerignore

# Include all markdown files in root
include *.md

# Include all core Python modules explicitly
include *.py
include sap_datasphere_mcp_server.py
include tool_descriptions.py
include error_helpers.py
include cache_manager.py
include mock_data.py
include telemetry.py
include datasphere_connector.py
include mcp_server_config.py

# Recursive includes
recursive-include auth *.py
recursive-include tests *.py
recursive-include tests *.md

# Exclude development files
exclude .pre-commit-config.yaml
exclude .ruff.toml
exclude .python-version
exclude .secrets.baseline

# Exclude directories
prune .git
prune .github
prune .vscode
prune .claude
prune .kiro
prune .devcontainer
prune __pycache__
prune .venv
prune .env
prune build
prune dist
prune *.egg-info

# Exclude test/demo files
exclude test_*.py
exclude *_test.py
exclude quick_demo.py
exclude decode_jwt.py
exclude EXACT_WORKING_CODE.py

# Exclude local environment
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
global-exclude __pycache__
