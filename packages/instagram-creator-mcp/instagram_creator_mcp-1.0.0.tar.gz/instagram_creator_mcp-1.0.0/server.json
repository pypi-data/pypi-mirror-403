{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.wmarceau/instagram-creator",
  "description": "Instagram automation: post images, Reels, carousels, Stories, analytics",
  "repository": {
    "url": "https://github.com/MarceauSolutions/dev-sandbox",
    "source": "github",
    "subfolder": "projects/instagram-creator"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "instagram-creator-mcp",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "runtime": "python",
      "environmentVariables": [
        {
          "name": "INSTAGRAM_ACCESS_TOKEN",
          "description": "Facebook/Instagram Graph API access token"
        },
        {
          "name": "INSTAGRAM_ACCOUNT_ID",
          "description": "Instagram Business Account ID (optional, auto-detected)"
        }
      ]
    }
  ]
}
