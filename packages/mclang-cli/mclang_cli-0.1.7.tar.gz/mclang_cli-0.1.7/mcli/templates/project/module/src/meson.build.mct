# src/meson.build - 共享库构建配置

py_sources = files('{{ project_name }}.py')

{{ safe_name }}_lib = shared_library(
    '{{ project_name }}',
    code_gen.process(py_sources),
    include_directories: inc_dir,
    dependencies: [mclang_dep],
    install: true,
)

{{ safe_name }}_dep = declare_dependency(
    link_with: {{ safe_name }}_lib,
    dependencies: [mclang_dep],
)
