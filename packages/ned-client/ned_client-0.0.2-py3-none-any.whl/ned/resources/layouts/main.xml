<pile xmlns:mu="https://github.com/Jackkillian/modern-urwid" mu:id="root">
    <mu:resources>
        <mu:python module="ned.controllers" />
        <mu:python module="ned.constants" />
        <mu:widget module="ned.widgets" />
        <mu:stylesheet path="styles.css" />
    </mu:resources>
    <mu:layout controller="@controllers.MainController" />
    <filler mu:height="1" mu:class="header">
        <columns>
            <text align="center" markup="Ned {constants.VERSION}" />
            <text align="center" mu:id="session_info_text" />
            <text align="center" mu:id="librespot_info_text" />
        </columns>
    </filler>
    <filler>
        <divider />
    </filler>
    <filler mu:height="1">
        <text align="center" mu:id="song_text" />
    </filler>
    <filler mu:height="1">
        <text align="center" mu:id="artist_text" />
    </filler>
    <centered mu:height="1">
        <timebar mu:id="progressbar" />
    </centered>
    <filler mu:height="1">
        <text align="center" mu:id="status_text" />
    </filler>
    <filler>
        <divider />
    </filler>
    <filler mu:height="1" mu:class="footer">
        <text
            align="center"
            markup="Press [n] to wake up Ned"
            mu:id="footer_text"
        />
    </filler>
</pile>
