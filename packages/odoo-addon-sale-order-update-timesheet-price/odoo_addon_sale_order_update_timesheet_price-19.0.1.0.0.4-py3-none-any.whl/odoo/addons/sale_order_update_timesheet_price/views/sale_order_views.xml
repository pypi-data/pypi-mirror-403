<odoo>
    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <list position="inside">
                <field name="show_update_price_button" invisible="1" />
            </list>
            <xpath expr="//list/field[@name='price_unit']" position="after">
                <button
                    name="%(action_sale_order_unit_price_update)d"
                    title="Update Unit Price"
                    type="action"
                    icon="fa-money"
                    attrs="{'invisible': [('show_update_price_button', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
