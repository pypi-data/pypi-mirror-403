{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://akios.ai/schemas/workflow/v1.0",
  "version": "1.0.0",
  "title": "AKIOS Workflow Schema",
  "description": "JSON schema for AKIOS workflow validation",
  "type": "object",
  "required": ["name", "description", "steps"],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "agent", "action", "config", "parameters"],
        "properties": {
          "step": { "type": "integer" },
          "agent": {
            "type": "string",
            "enum": ["filesystem", "http", "llm", "tool_executor"]
          },
          "action": { "type": "string" },
          "config": { "type": "object" },
          "parameters": { "type": "object" }
        }
      }
    }
  }
}
