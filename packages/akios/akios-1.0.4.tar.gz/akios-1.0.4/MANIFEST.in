# MANIFEST.in - Ensure critical legal files are included in PyPI distribution
# CRITICAL: For a sensitive security product, NEVER distribute without these files

# Legal documents (MANDATORY - Product compliance)
include LICENSE
include NOTICE
include TRADEMARKS.md
include DCO.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md

# Core documentation (User-facing)
include README.md
include CHANGELOG.md
include GETTING_STARTED.md

# Additional required docs
include SECURITY.md
include TROUBLESHOOTING.md
include SUPPORT.md
include LEGAL.md
include THIRD_PARTY_LICENSES.md
include AGENTS.md
include ROADMAP.md

# Configuration and build files
include pyproject.toml
include requirements.txt
include Dockerfile
include .dockerignore

# GitHub community files
recursive-include .github/ISSUE_TEMPLATE *
include .github/PULL_REQUEST_TEMPLATE.md

# Source code (critical for wheel)
recursive-include src *

# Documentation directory
recursive-include docs *

# Assets (logos, images)
recursive-include assets *

# Templates (workflow examples)
recursive-include templates *

# Git files (for source distribution)
include .gitignore

# Exclude development/internal files
exclude .env*
exclude internal/*
exclude tests/*
exclude test-env/*
exclude MagicMock/*
exclude build/*
exclude dist/*
exclude *.pyc
exclude __pycache__/*
exclude .DS_Store
exclude *.log
exclude *.tmp

# Ensure we never accidentally include release scripts
exclude .github/scripts/release/*
exclude .github/workflows/release.yml
