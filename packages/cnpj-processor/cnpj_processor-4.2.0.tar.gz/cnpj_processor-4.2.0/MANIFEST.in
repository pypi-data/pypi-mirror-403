# Incluir arquivos importantes
include README.md
include LICENSE
include requirements.txt
include VERSION
include VERSIONAMENTO.md
include README_*.md
include ATALHOS.md
include .env.example

# Incluir arquivo de configuração do cnpj-processor
recursive-include cnpj_processor .env.cnpj-processor
recursive-include docs *.md *.py

# Incluir código fonte
recursive-include src *.py
recursive-include cnpj_processor *.py

# Incluir arquivos de configuração
include setup.py
include pyproject.toml

# Excluir arquivos desnecessários
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Excluir diretórios de dados e cache
prune dados-abertos
prune dados-abertos-zip
prune parquet
prune logs
prune test_env_351
prune test_pypi_prod
