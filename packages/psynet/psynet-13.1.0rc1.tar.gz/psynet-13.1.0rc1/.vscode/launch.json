{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Breakpoints in psynet debug local",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${env:PWD}",
                    "remoteRoot": "/tmp/dallinger_develop"
                }
            ]
        }
    ]
}
