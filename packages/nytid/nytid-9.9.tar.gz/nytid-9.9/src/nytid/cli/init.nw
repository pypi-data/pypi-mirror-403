echo "${TIMESHEETS_MSG}" | \
  timesheets_mail "${TIMESHEETS_ADDR}" "${course}" *.pdf
<<timesheets variables>>=
TIMESHEETS_ADDR=dbosk@kth.se
TIMESHEETS_MSG="
Hej, hej!

This month's time sheets are attached.

