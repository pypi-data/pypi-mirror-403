name: tb_fifo
type: testbench
version: "1.0.0"
description: "FIFO unit test"

# HDL language
language: {{ language }}

# Top module
top:
  module: tb_fifo
{% if language == 'systemverilog' %}
  file: tb_fifo.sv
{% elif language == 'verilog' %}
  file: tb_fifo.v
{% elif language == 'vhdl' %}
  file: tb_fifo.vhd
{% endif %}

# Testbench files
files:
{% if language == 'systemverilog' %}
  - tb_fifo.sv
{% elif language == 'verilog' %}
  - tb_fifo.v
{% elif language == 'vhdl' %}
  - tb_fifo.vhd
{% endif %}

# Dependencies on RTL
dependencies:
  - name: {{ project_name }}
    type: rtl
    

# Simulation timeout (ns)
default_timeout: 10000

# Tags for test organization
tags:
  - unit
  - smoke

# Discovery metadata
discoverable: true
manifest_name: manifest.yaml
namespace: testbench