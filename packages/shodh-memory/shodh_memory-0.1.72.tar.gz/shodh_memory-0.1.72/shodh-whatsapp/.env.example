# LLM Provider (default: claude-cli)
# Options: claude-cli, groq, anthropic, openai, ollama
LLM_PROVIDER=claude-cli

# API Keys (only needed for the provider you're using)
GROQ_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Model overrides (optional)
GROQ_MODEL=llama-3.3-70b-versatile
CLAUDE_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o-mini
OLLAMA_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# shodh-memory server
SHODH_API_URL=http://127.0.0.1:3030
SHODH_API_KEY=sk-shodh-dev-local-testing-key

# Shared memory user ID (optional)
# If set, ALL contacts share this memory space
# Set to "claude-code" to share memory with your Claude Code sessions
SHODH_SHARED_USER_ID=

# WhatsApp configuration
# Comma-separated phone numbers (without +, country code included)
# Example: 14155551234,919876543210
ALLOWED_CONTACTS=
BLOCKED_CONTACTS=

# Set to true to reply to everyone (use with caution)
AUTO_REPLY_ALL=false

# Set to true to reply in group chats
REPLY_TO_GROUPS=false

# Delay before sending reply (ms) - makes it look more human
TYPING_DELAY=1000

# Custom system prompt (optional)
SYSTEM_PROMPT=

# Debug mode
DEBUG=false
