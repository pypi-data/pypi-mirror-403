# Test environment configuration (copy to .env)

# Database mode: remote | embedded
SEEKME_TEST_DB_MODE=remote

# Remote (MySQL) connection
SEEKME_TEST_DB_HOST=127.0.0.1
SEEKME_TEST_DB_PORT=2881
SEEKME_TEST_DB_USER=root
SEEKME_TEST_DB_PASSWORD=
SEEKME_TEST_DB_NAME=seekme_test
# Optional override (takes precedence over the fields above)
SEEKME_TEST_DB_URL=

# Embedded seekdb (only used when SEEKME_TEST_DB_MODE=embedded)
SEEKME_TEST_SEEKDB_PATH=/tmp/seekdb.db

# Local embeddings (sentence-transformers)
SEEKME_TEST_LOCAL_EMBEDDING=0
SEEKME_TEST_LOCAL_MODEL=sentence-transformers/paraphrase-MiniLM-L3-v2

# Remote embeddings (provider SDKs, e2e only)
SEEKME_TEST_REMOTE_EMBEDDING=0
SEEKME_TEST_REMOTE_API_KEY=
SEEKME_TEST_REMOTE_MODEL=text-embedding-v3
SEEKME_TEST_REMOTE_PROVIDER=openai
SEEKME_TEST_REMOTE_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
