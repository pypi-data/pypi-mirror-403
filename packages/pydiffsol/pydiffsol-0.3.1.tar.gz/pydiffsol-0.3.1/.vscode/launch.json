{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugpy: test_solve.py",
            "type": "debugpy",
            "request": "launch",
            "program": "test/test_solve.py",
            "python": ".venv/bin/python",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
            "preLaunchTask": "maturin develop",
        },
        {
            "name": "lldb: test_solve.py",
            "type": "lldb",
            "request": "launch",
            "program": ".venv/bin/python",
            "args": [
                "test/test_solve.py"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "maturin develop",
        },
        {
            "name": "debugpy: run example",
            "type": "debugpy",
            "request": "launch",
            "program": "${input:exampleFile}",
            "python": ".venv/bin/python",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "maturin develop",
        },
        {
            "name": "lldb: run example",
            "type": "lldb",
            "request": "launch",
            "program": ".venv/bin/python",
            "args": [
                "${input:exampleFile}"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "maturin develop",
        }
    ],
    "inputs": [
        {
            "id": "exampleFile",
            "type": "pickString",
            "description": "Select example to run",
            "options": [
                "examples/1_1_population_dynamics.py",
                "examples/2_1_spring_mass_system.py",
                "examples/4_1_electrical_circuits.py"
                "examples/5_1_heat_equation.py",
            ]
        }
    ]
}