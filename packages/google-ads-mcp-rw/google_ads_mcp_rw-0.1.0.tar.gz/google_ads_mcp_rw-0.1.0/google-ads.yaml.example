# Google Ads API Configuration
# Copy this to google-ads.yaml and fill in your credentials

# Developer token from Google Ads API Center
# Get it at: https://ads.google.com/aw/apicenter
developer_token: INSERT_DEVELOPER_TOKEN_HERE

# OAuth2 credentials from Google Cloud Console
# Create at: https://console.cloud.google.com/apis/credentials
client_id: INSERT_CLIENT_ID.apps.googleusercontent.com
client_secret: INSERT_CLIENT_SECRET

# OAuth2 refresh token
# Generate using Google's OAuth2 flow or google-ads-python library
refresh_token: INSERT_REFRESH_TOKEN

# (Optional) MCC account ID for managing multiple accounts
# Use digits only, no dashes (e.g., "1234567890" not "123-456-7890")
# If managing a single account directly, you can omit this
# login_customer_id: "1234567890"

# Required for google-ads-python library
use_proto_plus: true
