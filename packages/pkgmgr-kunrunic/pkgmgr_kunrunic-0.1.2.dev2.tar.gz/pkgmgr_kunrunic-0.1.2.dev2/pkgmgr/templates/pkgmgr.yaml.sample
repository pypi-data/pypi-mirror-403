pkg_release_root: ~/PKG/RELEASE
git:
  repo_root: null  # 입력하는 경우 create-pkg 시 해당 정보로 자동 설정됩니다.
  repo_url: "https://github.com/org/repo"
  keyword_prefix: "DEV-CODE:"
sources:
  - /path/to/source-A
  - /path/to/source-B
  
source:
  # 소스 스캔 제외 (glob 지원)
  exclude:
    - "**/build/**"
    - "**/*.tmp"
    - "**/bk"
    - "**/*.sc*"
    - "**/unit_test/**"
    - "Jamrules*"
    - "Jamfile*"
    - "**/Jamrules*"
    - "**/Jamfile*"

artifacts:
  root: ~/HOME
  targets: [bin, lib, data]
  # 배포/설치 영역 제외 (glob/패턴)
  exclude:
    - log                # 정확히 log 디렉터리
    - tmp/**             # tmp 이하 전체
    - "*.bak"            # 확장자 패턴
    - "**/*.tmp"         # 모든 하위에서 .tmp

watch:
  interval_sec: 60
  on_change: []   # 변경 발생 시 실행할 action 이름 리스트

collectors:
  enabled: ["checksums"]

actions:
  # 각 액션은 하나 이상의 커맨드를 가질 수 있음.
  # 필드: cmd (필수, 보통 cwd 기준 경로), cwd(선택), env(선택; 이 커맨드에만 적용)
  export_cksum:
    - cmd: python export_cksum.py --pkg-dir /path/to/pkg --excel /path/to/template.xlsx
      cwd: /app/script             # 선택: 작업 디렉터리
      env: { APP_ENV: dev }        # 선택: 이 명령에만 적용할 환경변수
  export_world_dev:
    - cmd: python dev_world.py
      cwd: /app/script
  export_world_security:
    - cmd: python security_world.py
      cwd: /app/script
  noti_email:
    - cmd: sh noti_email.sh
      cwd: /app/script

auto_actions:
  create_pkg: []
  update_pkg: []
  update_pkg_release: []
  cancel_pkg_release: []
  delete_pkg: []
  close_pkg: []
