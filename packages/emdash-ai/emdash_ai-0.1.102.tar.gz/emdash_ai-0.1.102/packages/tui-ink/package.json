{
  "name": "@emdash/tui-ink",
  "version": "0.1.0",
  "description": "Ink-based TUI for emdash with native text selection support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "emdash-tui": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "tsc && mkdir -p bundle && esbuild dist/index.js --bundle --platform=node --target=node18 --outfile=bundle/emdash-tui.mjs --format=esm --alias:react-devtools-core=./dist/devtools-stub.js --banner:js='import { createRequire } from \"module\"; const require = createRequire(import.meta.url);'",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsx src/index.tsx",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist bundle"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^14.1.0",
    "marked-terminal": "^7.1.0",
    "react": "^18.3.1",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
