{
  "name": "vibe-widgets-sundai",
  "private": true,
  "scripts": {
    "build-app-wrapper": "npm run build-app-wrapper:core && npm run build-app-wrapper:editor",
    "build-app-wrapper:core": "esbuild src/vibe_widget/AppWrapper/AppWrapper.js --bundle --format=esm --platform=browser --target=es2020 --minify --define:process.env.NODE_ENV=\\\"production\\\" --jsx=automatic --jsx-import-source=react --loader:.js=jsx --outfile=src/vibe_widget/AppWrapper.bundle.js",
    "build-app-wrapper:editor": "esbuild src/vibe_widget/AppWrapper/editor/EditorBundleEntry.js --bundle --format=esm --platform=browser --target=es2020 --minify --define:process.env.NODE_ENV=\\\"production\\\" --jsx=automatic --jsx-import-source=react --loader:.js=jsx --outfile=src/vibe_widget/AppWrapper/AppWrapper.editor.bundle.js",
    "watch-app-wrapper": "sh -c \"npm run build-app-wrapper:core -- --watch & npm run build-app-wrapper:editor -- --watch\"",
    "test:ui": "node --test tests/mocked_notebook/*.mjs"
  },
  "dependencies": {
    "@babel/standalone": "^7.26.0",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/language": "^6.10.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.26.3",
    "@lezer/highlight": "^1.2.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "codemirror": "^6.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "happy-dom": "^15.7.4"
  }
}
