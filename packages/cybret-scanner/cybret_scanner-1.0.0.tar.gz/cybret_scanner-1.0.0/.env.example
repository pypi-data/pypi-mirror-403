# LogicVulnScanner Configuration
# Copy this file to .env and fill in your values

# ============================================
# Neo4j Database Configuration
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-this-password
NEO4J_DATABASE=neo4j

# ============================================
# LLM Configuration (Choose ONE provider)
# ============================================

# Option 1: OpenRouter (Recommended)
# Get key at: https://openrouter.ai
# Cost: ~$0.05 per vulnerability
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Option 2: Anthropic Claude
# Get key at: https://console.anthropic.com
# Cost: ~$0.05 per vulnerability
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Option 3: OpenAI
# Get key at: https://platform.openai.com
# Cost: ~$0.15 per vulnerability
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# Option 4: Ollama (Local, Free)
# Install from: https://ollama.ai
# No API key needed
# OLLAMA_MODEL=deepseek-coder:33b
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Scanner Configuration
# ============================================
SCAN_TIMEOUT=3600
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_SCANS=5
SUPPORTED_LANGUAGES=["python","javascript","java","go"]

# ============================================
# API Configuration (Optional)
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO
ENABLE_CORS=true
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================
# Security (Optional)
# ============================================
SECRET_KEY=change-this-secret-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Git Repository Scanning (Optional)
# ============================================
CLONE_DIR=/tmp/cybret-scans
MAX_REPO_SIZE=524288000

# ============================================
# Detection Configuration (Optional)
# ============================================
IDOR_DETECTION_ENABLED=true
AUTH_BYPASS_DETECTION_ENABLED=true
PRIV_ESC_DETECTION_ENABLED=true
SQL_INJECTION_DETECTION_ENABLED=true

# ============================================
# Monitoring (Optional)
# ============================================
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# ============================================
# Feature Flags (Optional)
# ============================================
ENABLE_MULTI_LANGUAGE=true
ENABLE_INCREMENTAL_SCAN=false
ENABLE_AI_ANALYSIS=true
