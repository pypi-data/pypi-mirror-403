include README.md
include LICENSE
include pyproject.toml
recursive-include escape *.py *.pyi
recursive-include tests *.py

# Exclude generated files (downloaded to ~/.cache/escape/ at runtime)
exclude escape/generated/constants.py
recursive-exclude escape/generated/constants *.py

# Exclude caches
prune tests/__pycache__
prune escape/__pycache__

# Exclude data directory
prune data
