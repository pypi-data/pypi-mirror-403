ToastRack {
    margin-bottom: 5;
}

#chats {
    width: 100%;
    hatch: left $primary-darken-2 100%;
}

#top-chat-separator {
    hatch: left $primary-darken-2 100%;
    height: 1;
}

.request {
    min-width: 30%;
    max-width: 90%;
    padding: 1 2 1 2;
    margin: 0 2 1 0;
    background: $boost;
}

.request-container {
    align-horizontal: right;
    hatch: left $primary-darken-2 100%;
}

.response-container {
    align-horizontal: left;
    hatch: left $primary-darken-2 100%;
}

.response {
    margin: 0 0 1 2;
    width: 90%;
    height: auto;
}

.response #header {
    background: $primary-darken-3;
    margin-bottom: 1;
}

.response #buttons {
    align-horizontal: right;
}

.response Button {
    border: none;
    min-width: 18;
    margin-left: 1;
}

#token-rate {
    padding-left: 1;
}

#raw-view {
    padding: 0 2 1 2;
}

#new-request-bar > Static {
    width: 5%;
    height: 3;
    hatch: cross $surface 100%;
}

#new-conversation {
    min-width: 20;
}

#new-request {
    width: 1fr;
    height: 3;
}