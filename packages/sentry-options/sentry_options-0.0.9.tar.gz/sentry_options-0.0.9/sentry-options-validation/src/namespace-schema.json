{
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "type": {
      "const": "object"
    },
    "additionalProperties": {
      "type": "boolean"
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "type": {
              "enum": ["string", "integer", "number", "boolean"]
            },
            "default": {},
            "description": {
              "type": "string"
            }
          },
          "required": ["type", "default", "description"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "type", "properties"],
  "additionalProperties": false
}
