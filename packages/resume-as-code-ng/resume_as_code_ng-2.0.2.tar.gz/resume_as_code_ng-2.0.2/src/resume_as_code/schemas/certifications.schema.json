{
  "description": "Professional certification record.\n\nStores certification information for resume rendering with support\nfor expiration tracking and display control.",
  "properties": {
    "name": {
      "title": "Name",
      "type": "string"
    },
    "issuer": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Issuer"
    },
    "date": {
      "anyOf": [
        {
          "description": "Date in YYYY-MM format",
          "pattern": "^\\d{4}-\\d{2}$",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Date"
    },
    "expires": {
      "anyOf": [
        {
          "description": "Date in YYYY-MM format",
          "pattern": "^\\d{4}-\\d{2}$",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Expires"
    },
    "credential_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Credential Id"
    },
    "url": {
      "anyOf": [
        {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Url"
    },
    "display": {
      "default": true,
      "title": "Display",
      "type": "boolean"
    },
    "priority": {
      "anyOf": [
        {
          "enum": [
            "always",
            "normal",
            "low"
          ],
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Curation priority: 'always' forces inclusion regardless of JD relevance",
      "title": "Priority"
    }
  },
  "required": [
    "name"
  ],
  "title": "Certification",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resume-as-code.dev/schemas/certifications.schema.json"
}
