{
  "$defs": {
    "Scope": {
      "additionalProperties": false,
      "description": "Unified scope model for executive-level positions.\n\nCaptures leadership scale indicators: P&L, revenue, team size,\nbudget, geography, customers. Used by Position and inherited\nby work units via position reference.\n\nAll fields are optional - only populated fields render in scope line.",
      "properties": {
        "revenue": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Revenue impact, e.g., '$500M'",
          "title": "Revenue"
        },
        "team_size": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Total team/org size",
          "title": "Team Size"
        },
        "direct_reports": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Direct reports count",
          "title": "Direct Reports"
        },
        "budget": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Budget managed, e.g., '$50M'",
          "title": "Budget"
        },
        "pl_responsibility": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "P&L responsibility, e.g., '$100M'",
          "title": "Pl Responsibility"
        },
        "geography": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Geographic reach, e.g., 'Global', 'EMEA'",
          "title": "Geography"
        },
        "customers": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Customer scope, e.g., 'Fortune 500', '500K users'",
          "title": "Customers"
        }
      },
      "title": "Scope",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "Employment position record.\n\nRepresents a role at an employer. Work units reference positions\nvia position_id to group achievements under employers.",
  "properties": {
    "id": {
      "description": "Unique identifier like 'pos-techcorp-senior'",
      "title": "Id",
      "type": "string"
    },
    "employer": {
      "description": "Company/organization name",
      "title": "Employer",
      "type": "string"
    },
    "title": {
      "description": "Job title",
      "title": "Title",
      "type": "string"
    },
    "location": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Location (city, state/country)",
      "title": "Location"
    },
    "start_date": {
      "description": "Start date in YYYY-MM format",
      "pattern": "^\\d{4}-\\d{2}$",
      "title": "Start Date",
      "type": "string"
    },
    "end_date": {
      "anyOf": [
        {
          "description": "Date in YYYY-MM format",
          "pattern": "^\\d{4}-\\d{2}$",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "End date in YYYY-MM format, None for current",
      "title": "End Date"
    },
    "employment_type": {
      "anyOf": [
        {
          "enum": [
            "full-time",
            "part-time",
            "contract",
            "consulting",
            "freelance"
          ],
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Type of employment",
      "title": "Employment Type"
    },
    "promoted_from": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "ID of previous position (for promotions)",
      "title": "Promoted From"
    },
    "description": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional role summary",
      "title": "Description"
    },
    "scope": {
      "anyOf": [
        {
          "$ref": "#/$defs/Scope"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Scope indicators for executive positions"
    }
  },
  "required": [
    "id",
    "employer",
    "title",
    "start_date"
  ],
  "title": "Position",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resume-as-code.dev/schemas/positions.schema.json"
}
