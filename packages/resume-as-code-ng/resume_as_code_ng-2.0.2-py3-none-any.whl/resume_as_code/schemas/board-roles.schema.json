{
  "description": "Board or advisory role record.\n\nStores board and advisory role information for resume rendering\nwith support for role type classification and display control.",
  "properties": {
    "organization": {
      "title": "Organization",
      "type": "string"
    },
    "role": {
      "title": "Role",
      "type": "string"
    },
    "type": {
      "default": "advisory",
      "enum": [
        "director",
        "advisory",
        "committee"
      ],
      "title": "Type",
      "type": "string"
    },
    "start_date": {
      "description": "Date in YYYY-MM format",
      "pattern": "^\\d{4}-\\d{2}$",
      "title": "Start Date",
      "type": "string"
    },
    "end_date": {
      "anyOf": [
        {
          "description": "Date in YYYY-MM format",
          "pattern": "^\\d{4}-\\d{2}$",
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "End Date"
    },
    "focus": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Focus"
    },
    "display": {
      "default": true,
      "title": "Display",
      "type": "boolean"
    },
    "priority": {
      "anyOf": [
        {
          "enum": [
            "always",
            "normal",
            "low"
          ],
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Curation priority: 'always' forces inclusion regardless of JD relevance",
      "title": "Priority"
    }
  },
  "required": [
    "organization",
    "role",
    "start_date"
  ],
  "title": "BoardRole",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resume-as-code.dev/schemas/board-roles.schema.json"
}
