{
  "description": "Publication or speaking engagement record.\n\nStores publication and speaking engagement information for resume\nrendering with support for type classification and display control.\nSupports JD-relevant curation via topics and abstract fields.",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string"
    },
    "type": {
      "enum": [
        "conference",
        "article",
        "whitepaper",
        "book",
        "podcast",
        "webinar"
      ],
      "title": "Type",
      "type": "string"
    },
    "venue": {
      "title": "Venue",
      "type": "string"
    },
    "date": {
      "description": "Date in YYYY-MM format",
      "pattern": "^\\d{4}-\\d{2}$",
      "title": "Date",
      "type": "string"
    },
    "url": {
      "anyOf": [
        {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Url"
    },
    "display": {
      "default": true,
      "title": "Display",
      "type": "boolean"
    },
    "topics": {
      "description": "Topic tags for matching (normalized via SkillRegistry)",
      "items": {
        "type": "string"
      },
      "title": "Topics",
      "type": "array"
    },
    "abstract": {
      "anyOf": [
        {
          "maxLength": 500,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Brief description for semantic matching (max 500 chars)",
      "title": "Abstract"
    }
  },
  "required": [
    "title",
    "type",
    "venue",
    "date"
  ],
  "title": "Publication",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resume-as-code.dev/schemas/publications.schema.json"
}
