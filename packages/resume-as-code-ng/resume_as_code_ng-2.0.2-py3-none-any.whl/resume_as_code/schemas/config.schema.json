          "type": "string"
        },
        "start_date": {
          "description": "Date in YYYY-MM format",
          "pattern": "^\\d{4}-\\d{2}$",
          "title": "Start Date",
          "type": "string"
        },
        "end_date": {
          "anyOf": [
            {
              "description": "Date in YYYY-MM format",
              "pattern": "^\\d{4}-\\d{2}$",
              "type": "string"
