# AFO Kingdom Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env with real secrets to git

# ===========================================
# Database (肝 PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=15432
POSTGRES_DB=afo_memory
POSTGRES_USER=afo
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# Redis (心 Cache/Session)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# Ollama (脾 Local LLM)
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-vl:latest
VISION_MODEL=qwen3-vl:latest
OLLAMA_TIMEOUT=120
OLLAMA_GPU_LAYERS=99
OLLAMA_KEEP_ALIVE=10m

# ===========================================
# Security & Authentication
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=generate_a_secure_64_char_hex_string_here

# API Wallet Encryption (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
API_WALLET_ENCRYPTION_KEY=

# ===========================================
# Vault KMS (Optional - Enterprise)
# ===========================================
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_AUTH_METHOD=token
VAULT_ROLE_ID=
VAULT_SECRET_ID=
VAULT_MOUNT_POINT=secret
VAULT_SECRET_PATH=api_wallet
VAULT_STRICT_AUDIT=true
API_WALLET_KMS=local

# ===========================================
# LLM API Keys (Stored in Wallet, not here)
# ===========================================
# Use the API Wallet CLI to store these securely:
#   python -m AFO.api_wallet add openai_key <your_key>
#
# Or via REST API:
#   POST /api/wallet/keys

# ===========================================
# Environment & Feature Flags
# ===========================================
ENVIRONMENT=dev
AFO_ENV=dev

# Silent Civilization Mode (External exposure disabled)
SILENT_CIVILIZATION_MODE=true
INTERNAL_EXCELLENCE_MODE=true
EXTERNAL_EXPOSURE_ENABLED=false
EXTERNAL_API_ENABLED=false
EXTERNAL_LOGGING_ENABLED=false
PUBLIC_ENDPOINTS_ENABLED=false

# ===========================================
# Health Check Hosts (SSOT)
# ===========================================
AFO_HEALTH_POSTGRES_HOSTS=afo-postgres,localhost,127.0.0.1
AFO_HEALTH_REDIS_HOSTS=afo-redis,localhost,127.0.0.1

# ===========================================
# Notifications (Discord/Slack)
# ===========================================
# Discord Webhook for CI/CD alerts
DISCORD_WEBHOOK_URL=
# Slack Webhook (optional)
SLACK_WEBHOOK_URL=

# ===========================================
# MCP Contract Enforcement
# ===========================================
AFO_MCP_REQUIRED=1
