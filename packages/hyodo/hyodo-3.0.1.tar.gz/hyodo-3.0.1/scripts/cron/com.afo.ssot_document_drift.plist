<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.afo.ssot_document_drift</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>./scripts/ssot_document_drift.py</string>
        <string>--create-issue</string>
    </array>

    <key>WorkingDirectory</key>
    <string>.</string>

    <key>StartInterval</key>
    <integer>86400</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>./artifacts/run/ssot_document_drift.out</string>

    <key>StandardErrorPath</key>
    <string>./artifacts/run/ssot_document_drift.err</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
        <key>GH_PATH</key>
        <string>/opt/homebrew/bin/gh</string>
    </dict>
</dict>
</plist>
