{
  "mcpServers": {
    "raindropio-mcp-dev": {
      "args": [
        "run",
        "python",
        "-m",
        "raindropio_mcp",
        "--http",
        "--http-host",
        "127.0.0.1",
        "--http-port",
        "3034"
      ],
      "command": "uv",
      "cwd": ".",
      "env": {
        "RAINDROP_TOKEN": "your-raindrop-token",
        "UV_KEYRING_PROVIDER": "subprocess"
      }
    }
  }
}
