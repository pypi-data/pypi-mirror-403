    "oauthTenantId": {
      "type": "string",
      "metadata": {
        "description": "OAuth Azure AD Tenant ID"
      }
    },
    "chainlitAuthSecret": {
      "type": "securestring",
      "metadata": {
        "description": "Chainlit auth secret"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Minimum replicas"
