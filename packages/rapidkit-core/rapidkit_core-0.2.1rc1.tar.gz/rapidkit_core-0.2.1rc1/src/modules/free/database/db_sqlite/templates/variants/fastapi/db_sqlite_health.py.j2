"""FastAPI health helper for {{ module_title }}."""

from __future__ import annotations

from fastapi import APIRouter

from .{{ module_name }}_routes import build_router


def create_health_router() -> APIRouter:
    """Return a router exposing only the health endpoint for infrastructure wiring."""

    router = APIRouter()
    health_router = build_router()
    for route in health_router.routes:
        if getattr(route, "path", "").endswith("/health"):
            router.routes.append(route)
    return router


__all__ = ["create_health_router"]
