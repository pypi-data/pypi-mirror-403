import { INestApplication } from '@nestjs/common';
import { Test } from '@nestjs/testing';
import request from 'supertest';

import { DbSqliteModule } from '../../../../src/modules/free/database/db_sqlite/db-sqlite/db-sqlite.module';
import { DbSqliteHealthModule } from '../../../../src/health/db-sqlite-health.module';
import { DbSqliteService } from '../../../../src/modules/free/database/db_sqlite/db-sqlite/db-sqlite.service';

async function createApplication(): Promise<INestApplication> {
  const moduleRef = await Test.createTestingModule({
    imports: [DbSqliteModule, DbSqliteHealthModule],
  }).compile();

  const app = moduleRef.createNestApplication();
  await app.init();
  return app;
}

describe('DbSqliteModule (Integration)', () => {
  let app: INestApplication;
  let service: DbSqliteService;

  beforeAll(async () => {
    app = await createApplication();
    service = app.get(DbSqliteService);
  });

  afterAll(async () => {
    await app.close();
  });

  it('exposes DbSqliteService bindings', () => {
    expect(service).toBeDefined();
    const metadata = service.getMetadata();
    expect(metadata).toHaveProperty('module', '{{ rapidkit_vendor_module }}');
    expect(typeof service.listTables).toBe('function');
  });

  it('serves module health endpoint', async () => {
    const server = app.getHttpServer();
    const response = await request(server).get('/api/health/module/db-sqlite');

    expect(response.status).toBe(200);
    expect(response.body).toHaveProperty('module', '{{ rapidkit_vendor_module }}');
    expect(response.body).toHaveProperty('status');
  });
});
