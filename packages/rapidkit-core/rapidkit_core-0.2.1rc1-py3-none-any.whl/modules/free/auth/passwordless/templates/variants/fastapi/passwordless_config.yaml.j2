{%- set defaults = passwordless_defaults or {} -%}
# RapidKit generated configuration for {{ module_title }}.
# Customize values to align with your passwordless deployment strategy.

passwordless:
  token_ttl_seconds: {{ defaults.get("token_ttl_seconds", 900) | tojson }}
  token_length: {{ defaults.get("token_length", 8) | tojson }}
  resend_cooldown_seconds: {{ defaults.get("resend_cooldown_seconds", 60) | tojson }}
  max_attempts: {{ defaults.get("max_attempts", 5) | tojson }}
  delivery_methods: {{ defaults.get("delivery_methods", ["email", "sms"]) | tojson }}
  magic_link_base_url: {{ defaults.get("magic_link_base_url", "https://example.com/auth/passwordless") | tojson }}
