<!-- GROUP OF PERMISSIONS FOR TEACHER USERS -->
<tryton>
    <data>
        <!-- Criar o grupo de usuÃ¡rios docentes -->
        <record model="res.group" id="group_akademy_teacher">
            <field name="name">Akademy Docentes</field>
        </record>       

        <!-- Access to the PARTY menu
        <record model="ir.ui.menu-res.group" 
            id="akademy_party-group_akademy_teacher">
            <field name="menu" ref="akademy_party"/>
            <field name="group" ref="group_akademy_teacher"/>
        </record>
        -->

        <!-- Defining Rules for Accessing Models -->
        <!-- Party Model -->
        <record model="ir.model.access" 
            id="access_akademy_entities-group_akademy_teacher">
            <field name="model" search="[('model', '=', 'party.party')]"/>
            <field name="group" ref="group_akademy_teacher"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" 
            id="rule_group_akademy_entities-group_akademy_teacher">
            <field name="name">Entidades</field>
            <field name="model" 
                search="[('model', '=', 'party.party')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!--
        <record model="ir.rule" id="rule_group_akademy_entities_line1">
            <field name="domain" pyson="1" 
                eval="[('company', '=', Eval('user', {}).get('company', None))]" />
            <field name="rule_group" ref="rule_group_akademy_entities-group_akademy_teacher"/>
        </record>
        -->
        <record model="ir.rule.group-res.group" 
            id="res_group_akademy_entities-group_akademy_teacher">
            <field name="rule_group" ref="rule_group_akademy_entities-group_akademy_teacher"/>
            <field name="group" ref="group_akademy_teacher"/>
        </record>        
    </data>
</tryton>