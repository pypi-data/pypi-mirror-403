{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ape.dev/schemas/intent.json",
  "title": "APE Intent Schema",
  "description": "Schema for APE Intent objects - structured, machine-readable declaration of user intent",
  "type": "object",
  "required": [
    "allowed_actions",
    "forbidden_actions",
    "scope"
  ],
  "properties": {
    "allowed_actions": {
      "type": "array",
      "description": "List of action IDs explicitly allowed by this intent",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "forbidden_actions": {
      "type": "array",
      "description": "List of action IDs explicitly forbidden by this intent",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "scope": {
      "type": "string",
      "description": "Scope boundary for this intent",
      "minLength": 1
    },
    "escalation_required": {
      "type": "array",
      "description": "List of action IDs that require escalation",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the intent"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the intent"
    }
  },
  "additionalProperties": false
}
