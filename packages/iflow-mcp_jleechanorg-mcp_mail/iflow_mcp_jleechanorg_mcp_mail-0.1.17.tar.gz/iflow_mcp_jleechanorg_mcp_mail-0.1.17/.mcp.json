{
  "_comment": "For production, run ./scripts/integrate_claude_code.sh to generate authenticated config in .claude/settings.json",
  "mcpServers": {
    "mcp-agent-mail": {
      "type": "http",
      "url": "http://127.0.0.1:8765/mcp/",
      "headers": {
        "Authorization": "Bearer mcp-agent-mail-default-token"
      },
      "options": {
        "timeoutSeconds": 180,
        "initTimeoutSeconds": 30
      }
    }
  }
}
