  },
  "scripts": {
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "vite build",
    "build:server": "npx tsc",
    "build:types": "npx tsc --emitDeclarationOnly",
    "canvas": "npm run build:server && node dist/server.js",
    "canvas-bg": "npm run build:server && node dist/server.js &",
    "canvas-for-npx": "./start-canvas-only.sh",
    "dev": "concurrently \"npm run dev:server\" \"vite\"",
    "dev:server": "npx tsc --watch",
    "prepublishOnly": "npm run build",
    "production": "npm run build && npm run canvas",
    "start-all": "./start-both.sh",
    "start-canvas": "npm run build:server && node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns='integration'",
    "test:unit": "jest --testPathPatterns='unit'",
    "test:watch": "jest --watch",
    "type-check": "npx tsc --noEmit"
  },
  "type": "module",
  "version": "0.1.0"
