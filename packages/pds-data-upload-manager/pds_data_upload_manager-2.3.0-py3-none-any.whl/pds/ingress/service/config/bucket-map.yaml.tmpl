# =======================
# bucket-map.yaml.tmpl
# =======================
# Defines all node-specific staging and archive S3 buckets for the
# PDS Ingress Service. This version is Yamale-schema compliant and
# supports both staging and archive buckets for each node.

BUCKET_MAP:
  NODES:
    ATM:
      buckets:
        staging:
          name: pds-atm-staging-${venue}
        archive:
          name: pds-atm-archive-${venue}

    ENG:
      buckets:
        staging:
          name: pds-eng-staging-${venue}
        archive:
          name: pds-eng-archive-${venue}

    GEO:
      buckets:
        staging:
          name: pds-geo-staging-${venue}
        archive:
          name: pds-geo-archive-${venue}

    IMG:
      buckets:
        staging:
          name: pds-img-staging-${venue}
        archive:
          name: pds-img-archive-${venue}

    NAIF:
      buckets:
        staging:
          name: pds-naif-staging-${venue}
        archive:
          name: pds-naif-archive-${venue}

    PPI:
      buckets:
        staging:
          name: pds-ppi-staging-${venue}
        archive:
          name: pds-ppi-archive-${venue}

    RMS:
      buckets:
        staging:
          name: pds-rms-staging-${venue}
        archive:
          name: pds-rms-archive-${venue}

    RS:
      buckets:
        staging:
          name: pds-rs-staging-${venue}
        archive:
          name: pds-rs-archive-${venue}

    SBN:
      buckets:
        staging:
          name: pds-sbn-staging-${venue}
        archive:
          name: pds-sbn-archive-${venue}
      paths:
        - prefix: manifests/*
          bucket:
            name: pds-sbn-manifests-${venue}
        - prefix: weblogs/*
          bucket:
            name: pds-${venue}-web-analytics
