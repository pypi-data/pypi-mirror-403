{
  "$schema": "metaschema/strict_meta_schema.json#",
  "$id": "hande_assay",
  "title": "H&E Assay",
  "type": "object",

	"$comment": "description used in docs/index.html and docs/assays.hande.html",
  "description": "H & E assay",

  "additionalProperties": false,
  "mergeStrategy": "objectMerge",

  "definitions": {
    "input": {
      "type": "object",
      "description": "H & E assay input files.",
      "additionalProperties": false,
      "properties": {
        "image_file": {
          "inheritableBase": true,
          "mergeStrategy": "objectMerge",
          "anyOf": [
            {
              "$comment": "Path to the H & E image in SVS format.",
              "$ref": "artifacts/artifact_image.json"
            },
            {
              "$comment": "Path to the H & E image in JPG format.",
              "$ref": "artifacts/artifact_jpg.json"
            },
            {
              "$comment": "Path to the H & E image in OME-TIFF format.",
              "$ref": "artifacts/artifact_jpg.json"
            }
          ]
        },
        "annotated_image": {
          "inheritableBase": true,
          "mergeStrategy": "objectMerge",
          "anyOf": [
            {
              "$comment": "Path to the H & E annotated image in SVS format.",
              "$ref": "artifacts/artifact_image.json"
            },
            {
              "$comment": "Path to the H & E annotated image in JPG format.",
              "$ref": "artifacts/artifact_jpg.json"
            },
            {
              "$comment": "Path to the H & E annotated image in OME-TIFF format.",
              "$ref": "artifacts/artifact_jpg.json"
            }
          ]
        }
      }
    },
    "record": {
      "type": "object",
      "description": "A single data record from H & E assay.",
      "additionalProperties": false,
      "properties": {
        "cimac_id": {
            "$comment": "Id of an sample within this clinical trial, that this assay record is based upon.",
            "$ref": "sample.json#properties/cimac_id"
        },
        "comment": {
            "description": "A text comment regarding this slide.",
            "type": "string"
          },
        "files": {
          "$ref": "assays/hande_assay.json#definitions/input"
        },
        "tumor_tissue_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "viable_tumor_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "viable_stroma_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "necrosis_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "fibrosis_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": ["cimac_id", "files"]
    }
  },
  
  "properties": {
      "assay_creator": {"$ref": "assays/components/assay_core.json#properties/assay_creator"},
      "batch_id": {
        "description": "Batch identification number. Unique to every upload.",
        "type": "string"
      },
      "optional_id": {
        "description": "User provided optional id. Currently comes from CIDC Submission ID",
        "type": "string"
      },
      "records": {
            "type": "array",
            "description": "A single data record from H & E assay.",
            "items": {
                "$ref": "assays/hande_assay.json#definitions/record"
            },
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {
                "idRef": "cimac_id"
            }
        }
  },
  "required": [
    "records",
    "assay_creator",
    "batch_id"
  ]
}
