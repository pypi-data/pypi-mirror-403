{
    "version": "2.0.0",
    "tasks": [{% for name in nmkTasks.keys() %}
    {% if loop.index > 1 %},{% endif %}{
            "label": "nmk {{ name }}",
            "type": "shell",
            "command": "{% if backendLegacy %}source .buildenv/activate.sh && {% endif %}nmk {{ name }}",
            "group": {% if name in defaultTasks %}{
                "kind": "{{ nmkTasks[name].group }}",
                "isDefault": true
            }{% else %}"{{ nmkTasks[name].group }}"{% endif %},
            "runOptions": {
                "runOn": "{{ nmkTasks[name].runOn }}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }{% endfor %},{% for name in shellTasks.keys() %}
    {% if loop.index > 1 %},{% endif %}{
            "label": "{{ name }}",
            "type": "shell",
            "command": "{{ shellTasks[name].command }}",
            "group": {% if name in defaultTasks %}{
                "kind": "{{ shellTasks[name].group }}",
                "isDefault": true
            }{% else %}"{{ shellTasks[name].group }}"{% endif %},
            "runOptions": {
                "runOn": "{{ shellTasks[name].runOn }}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }{% endfor %}
    ]
}