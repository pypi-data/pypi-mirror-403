{
    "name": "cssl",
    "displayName": "CSSL Language",
    "description": "Professional IDE support for CSSL scripts with IntelliSense, real-time diagnostics, autocomplete, and syntax highlighting",
    "version": "2.0.0",
    "publisher": "IncludeCPP",
    "icon": "images/cssl.png",
    "engines": {
        "vscode": "^1.75.0"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^18.0.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers"
    ],
    "keywords": [
        "cssl",
        "script",
        "includecpp",
        "c++",
        "python",
        "run"
    ],
    "activationEvents": [
        "onLanguage:cssl"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cssl",
                "aliases": ["CSSL", "cssl"],
                "extensions": [".cssl"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl.png",
                    "dark": "./images/cssl.png"
                }
            },
            {
                "id": "cssl-mod",
                "aliases": ["CSSL Module", "cssl-mod"],
                "extensions": [".cssl-mod"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl_pl.png",
                    "dark": "./images/cssl_pl.png"
                }
            },
            {
                "id": "cssl-pl",
                "aliases": ["CSSL Payload", "cssl-pl"],
                "extensions": [".cssl-pl"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl_pl.png",
                    "dark": "./images/cssl_pl.png"
                }
            },
            {
                "id": "cp",
                "aliases": ["IncludeCPP Plugin", "cp"],
                "extensions": [".cp"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl.png",
                    "dark": "./images/cssl.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "cssl",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cssl-mod",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cssl-pl",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cp",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "cssl",
                "path": "./snippets/cssl.snippets.json"
            },
            {
                "language": "cssl-mod",
                "path": "./snippets/cssl.snippets.json"
            },
            {
                "language": "cssl-pl",
                "path": "./snippets/cssl.snippets.json"
            }
        ],
        "commands": [
            {
                "command": "cssl.runFile",
                "title": "Run CSSL File",
                "icon": "$(play)",
                "enablement": "resourceExtname == .cssl"
            },
            {
                "command": "cssl.restartServer",
                "title": "CSSL: Restart Language Server"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "cssl.runFile",
                    "when": "resourceExtname == .cssl",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "cssl.runFile",
                    "when": "resourceExtname == .cssl",
                    "group": "1_run"
                }
            ]
        },
        "keybindings": [
            {
                "command": "cssl.runFile",
                "key": "f5",
                "when": "resourceExtname == .cssl && !inDebugMode"
            },
            {
                "command": "cssl.runFile",
                "key": "ctrl+f5",
                "when": "resourceExtname == .cssl"
            }
        ],
        "taskDefinitions": [
            {
                "type": "cssl",
                "required": ["file"],
                "properties": {
                    "file": {
                        "type": "string",
                        "description": "The CSSL file to run"
                    }
                }
            }
        ],
        "configuration": {
            "title": "CSSL",
            "properties": {
                "cssl.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Path to Python executable"
                },
                "cssl.showOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show output panel when running CSSL files"
                },
                "cssl.languageServer.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the CSSL language server for IntelliSense, diagnostics, and autocomplete"
                },
                "cssl.languageServer.trace": {
                    "type": "string",
                    "enum": ["off", "messages", "verbose"],
                    "default": "off",
                    "description": "Trace communication between VS Code and the language server"
                },
                "cssl.diagnostics.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable real-time error and warning diagnostics"
                },
                "cssl.diagnostics.undefinedVariables": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show warnings for undefined variables"
                },
                "cssl.diagnostics.unusedVariables": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show info for unused variables"
                },
                "cssl.diagnostics.invalidPointers": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show warnings for pointer references (?x) targeting undefined variables"
                }
            }
        },
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "storage.modifier.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "storage.modifier.extends.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "storage.modifier.overwrites.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "support.type.cssl",
                        "settings": {
                            "foreground": "#C586C0"
                        }
                    },
                    {
                        "scope": "support.type.async.cssl",
                        "settings": {
                            "foreground": "#C586C0"
                        }
                    },
                    {
                        "scope": "variable.other.declaration.cssl",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    },
                    {
                        "scope": "variable.parameter.cssl",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    },
                    {
                        "scope": "variable.parameter.function-call.cssl",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    },
                    {
                        "scope": "variable.other.pointer.cssl",
                        "settings": {
                            "foreground": "#DA70D6"
                        }
                    },
                    {
                        "scope": "constant.other.symbol.snapshot.cssl",
                        "settings": {
                            "foreground": "#4EC9B0"
                        }
                    }
                ]
            }
        }
    }
}
