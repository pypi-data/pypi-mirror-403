{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["package.json", "pyproject.toml", "README.md", "src/**/*.py", "uv.lock"],
      "outputs": ["dist/**"]
    },
    "check": {
      "dependsOn": [
        "eslint:check",
        "mypy:check",
        "prettier:check",
        "pyprojectfmt:check",
        "ruff-format:check",
        "ruff-lint:check",
        "typescript:check"
      ]
    },
    "fix": {
      "dependsOn": [
        "eslint:fix",
        "mypy:check",
        "prettier:fix",
        "pyprojectfmt:fix",
        "ruff-format:fix",
        "ruff-lint:fix",
        "typescript:check"
      ]
    },
    "post-test": {
      "dependsOn": ["@spear-ai/horizon-database#postgres-all:down"]
    },
    "pyprojectfmt:check": {
      "inputs": ["pyproject.toml"]
    },
    "pyprojectfmt:fix": {
      "cache": false,
      "inputs": ["pyproject.toml"]
    },
    "test": {
      "dependsOn": ["pytest:test"]
    }
  }
}
