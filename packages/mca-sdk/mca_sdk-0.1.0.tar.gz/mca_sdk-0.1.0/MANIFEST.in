# Include documentation and license
include mca-prototype/README.md
include LICENSE
include mca-prototype/CHANGELOG.md

# Include package data
recursive-include mca-prototype/mca_sdk *.py
recursive-include mca-prototype/mca_sdk py.typed

# Exclude tests and examples
recursive-exclude tests *
recursive-exclude mca-prototype/tests *
recursive-exclude mca-prototype/sdk-examples *
recursive-exclude mca-prototype/demo *

# Exclude configuration and deployment files
recursive-exclude mca-prototype/config *
exclude docker-compose.yml
exclude mca-prototype/docker-compose.yml

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
