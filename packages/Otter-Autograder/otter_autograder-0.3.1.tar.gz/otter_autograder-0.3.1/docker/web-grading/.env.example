# Web Grading Interface - Environment Configuration
# Copy this file to .env and fill in your values
# Do NOT commit .env to version control

# =============================================================================
# Canvas LMS Configuration
# =============================================================================

# Canvas Development/Beta Environment (for testing)
CANVAS_API_KEY_DEV=
CANVAS_API_URL_DEV=https://canvas.beta.instructure.com

# Canvas Production Environment
CANVAS_API_KEY_PROD=
CANVAS_API_URL_PROD=https://csumb.instructure.com

# Which Canvas environment to use by default (true = production, false = dev)
USE_PROD_CANVAS=false

# =============================================================================
# AI Service Configuration
# =============================================================================

# Anthropic (Claude) API Key
# Get from: https://console.anthropic.com/
# Used for: Name extraction, blank detection, rubric generation, auto-grading
ANTHROPIC_API_KEY=

# OpenAI API Key (optional fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Application Configuration
# =============================================================================

# Database location (default: /data/grading.db in Docker)
# GRADING_DB_PATH=/data/grading.db

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Secret key for session signing (generate with: openssl rand -hex 32)
# Required for future authentication features
SECRET_KEY=

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# Optional: Slack Notifications
# =============================================================================

# Slack webhook URL for notifications
# SLACK_WEBHOOK=

# Slack API token (for advanced features)
# SLACK_TOKEN=

# =============================================================================
# Optional: Advanced Settings
# =============================================================================

# Prefer Anthropic over OpenAI for AI features
PREFER_ANTHROPIC=true

# Maximum workers for parallel processing
# MAX_WORKERS=4

# =============================================================================
# Docker-Specific Settings
# =============================================================================

# These are set by docker-compose.yml, but can be overridden:
# GRADING_DB_PATH=/data/grading.db
# PYTHONUNBUFFERED=1

# =============================================================================
# Notes
# =============================================================================
#
# Getting Canvas API Keys:
# 1. Log into Canvas
# 2. Go to Account > Settings
# 3. Scroll to "Approved Integrations"
# 4. Click "+ New Access Token"
# 5. Enter a purpose (e.g., "Web Grading Interface")
# 6. Copy the generated token (you won't see it again!)
#
# Canvas API URLs:
# - Beta/Test: Usually https://[institution].beta.instructure.com
# - Production: Usually https://[institution].instructure.com
#
# AI API Keys:
# - Anthropic: Required for most features
# - OpenAI: Optional, used as fallback if Anthropic unavailable
#
# Security:
# - Never commit .env files to version control
# - Keep API keys secure and rotate them periodically
# - Use development Canvas for testing, production only when ready
