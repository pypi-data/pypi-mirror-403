# 包含所有README文件
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# 包含数据文件
recursive-include wikinet/data *.json *.pkl *.csv *.txt

# 包含配置文件
recursive-include wikinet/config *.json *.yaml *.yml

# 包含模型文件
recursive-include wikinet/models *.json *.pth

# 排除特定文件
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude .*
global-exclude *.so
global-exclude *.dylib